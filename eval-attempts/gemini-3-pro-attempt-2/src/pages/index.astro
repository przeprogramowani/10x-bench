---
import Layout from '../layouts/Layout.astro';
import CourseCard from '../components/CourseCard';
import PodcastEpisode from '../components/PodcastEpisode';
import VideoCard from '../components/VideoCard';
import { courses, podcastEpisodes, youtubeVideos } from '../data/content';

const latestPodcasts = podcastEpisodes.slice(0, 3);
const latestVideos = youtubeVideos.slice(0, 3);
---

<Layout title="Strona Główna">
	<section class="relative bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
                    <polygon points="50,0 100,0 50,100 0,100" />
                </svg>

                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block xl:inline">Zostań programistą</span>
                            <span class="block text-purple-600 xl:inline"> ery AI</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Przeprogramowani to Twoje źródło wiedzy o nowoczesnym developmencie. Dołącz do 10xDevs i naucz się wykorzystywać potencjał sztucznej inteligencji w codziennej pracy.
                        </p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="rounded-md shadow">
                                <a href="https://10xdevs.pl" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 md:py-4 md:text-lg md:px-10 transition-colors">
                                    Dołącz do 10xDevs
                                </a>
                            </div>
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="#kursy" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-purple-700 bg-purple-100 hover:bg-purple-200 md:py-4 md:text-lg md:px-10 transition-colors">
                                    Zobacz kursy
                                </a>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 bg-gray-50 flex items-center justify-center">
            <div class="relative w-full h-64 sm:h-72 md:h-96 lg:h-full">
               <img class="absolute inset-0 w-full h-full object-cover" src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80" alt="Coding on laptop">
               <div class="absolute inset-0 bg-purple-900 opacity-20"></div>
            </div>
        </div>
    </section>

    <section id="kursy" class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Nasze kursy</h2>
                <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
                    Kompleksowe materiały edukacyjne, które pomogą Ci wejść na wyższy poziom.
                </p>
            </div>
            <div class="mt-10 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                 {courses.map(course => (
                    <CourseCard client:visible {...course} />
                ))}
            </div>
        </div>
    </section>

    <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-extrabold text-gray-900">Najnowsze odcinki podcastu</h2>
                <a href="/podcast" class="text-purple-600 hover:text-purple-800 font-medium hidden sm:block">
                    Wszystkie odcinki &rarr;
                </a>
            </div>
            <div class="grid gap-6 lg:grid-cols-3">
                {latestPodcasts.map(episode => (
                    <PodcastEpisode client:visible {...episode} />
                ))}
            </div>
             <div class="mt-6 text-center sm:hidden">
                <a href="/podcast" class="text-purple-600 hover:text-purple-800 font-medium">
                    Wszystkie odcinki &rarr;
                </a>
            </div>
        </div>
    </section>

    <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-extrabold text-gray-900">Ostatnie filmy na YouTube</h2>
                <a href="/youtube" class="text-purple-600 hover:text-purple-800 font-medium hidden sm:block">
                    Zobacz kanał &rarr;
                </a>
            </div>
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {latestVideos.map(video => (
                    <VideoCard client:visible {...video} />
                ))}
            </div>
             <div class="mt-6 text-center sm:hidden">
                <a href="/youtube" class="text-purple-600 hover:text-purple-800 font-medium">
                    Zobacz kanał &rarr;
                </a>
            </div>
        </div>
    </section>
</Layout>
