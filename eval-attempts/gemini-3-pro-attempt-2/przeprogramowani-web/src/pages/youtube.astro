---
import Layout from '../layouts/Layout.astro';
import { PlayCircle } from 'lucide-react';

const videos = [
  {
    title: '5 TECHNIK, KTÓRE NAPRAWIŁY MÓJ WORKFLOW PROGRAMOWANIA Z AI',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg', // Placeholder
    date: '2024-11-15',
    views: '12K',
    url: '#'
  },
  {
    title: 'Demo Day 10xDevs - Najlepsze projekty',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg',
    date: '2024-10-30',
    views: '8K',
    url: '#'
  },
  {
    title: 'Opanuj Agenta AI (Cursor, Codex, MCP)',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg',
    date: '2024-09-20',
    views: '15K',
    url: '#'
  },
  {
    title: 'Programowanie z AI bez tajemnic',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg',
    date: '2024-08-05',
    views: '22K',
    url: '#'
  },
  {
    title: 'Jak zacząć z TypeScript w 2024?',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg',
    date: '2024-07-12',
    views: '30K',
    url: '#'
  },
  {
    title: 'React 19 - co nowego?',
    thumbnail: 'https://img.youtube.com/vi/placeholder/maxresdefault.jpg',
    date: '2024-06-01',
    views: '25K',
    url: '#'
  }
];
---

<Layout title="YouTube">
  <section class="bg-gray-900 text-white py-20 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Kanał YouTube</h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Tutoriale, live coding, recenzje narzędzi i wiele więcej. Dołącz do ponad 40 000 subskrybentów.
      </p>
      <a href="https://www.youtube.com/c/przeprogramowani" target="_blank" rel="noopener noreferrer" class="mt-8 inline-block bg-red-600 text-white px-8 py-3 rounded-full font-bold hover:bg-red-700 transition-colors">
        Subskrybuj kanał
      </a>
    </div>
  </section>

  <div class="container mx-auto px-4 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {videos.map(video => (
        <a href={video.url} class="group block bg-white rounded-xl shadow-sm hover:shadow-lg transition-all transform hover:-translate-y-1 overflow-hidden">
          <div class="aspect-video bg-gray-200 relative overflow-hidden">
             {/* Thumbnail Placeholder with Overlay */}
             <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all flex items-center justify-center">
               <PlayCircle className="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transition-opacity transform scale-75 group-hover:scale-100" />
             </div>
             <div class="absolute bottom-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded">
               12:34
             </div>
          </div>
          <div class="p-5">
            <h3 class="font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-red-600 transition-colors">
              {video.title}
            </h3>
            <div class="flex justify-between items-center text-sm text-gray-500 mt-4">
              <span>{video.views} wyświetleń</span>
              <span>{video.date}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
