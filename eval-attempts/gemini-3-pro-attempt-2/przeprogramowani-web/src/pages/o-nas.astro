---
import Layout from '../layouts/Layout.astro';

const founders = [
  {
    name: 'Przemek Smyrdek',
    role: 'Co-founder',
    bio: 'Lead Engineer i Manager w międzynarodowych firmach (DAZN, Cabify). Autor kursu "Opanuj JavaScript".',
    image: '/images/przemek.jpg', // Placeholder path
    linkedin: 'https://www.linkedin.com/in/psmyrdek/'
  },
  {
    name: 'Marcin Czarkowski',
    role: 'Co-founder',
    bio: 'Lead techniczny w SmartRecruiters. Autor podcastu Opanuj AI i kursu "10xDevs".',
    image: '/images/marcin.jpg', // Placeholder path
    linkedin: 'https://www.linkedin.com/in/mkczarkowski/'
  }
];

const values = [
  {
    title: 'Więcej niż kodowanie',
    description: 'Współczesny świat technologii wymaga kreatywności, komunikacji i zrozumienia biznesu.'
  },
  {
    title: 'Holistyczny rozwój',
    description: 'Kształcimy świadomych specjalistów, a nie tylko koderów.'
  },
  {
    title: 'Praktyka przede wszystkim',
    description: 'Wiedza, którą przekazujemy, jest sprawdzona w boju i gotowa do użycia w projektach komercyjnych.'
  },
  {
    title: 'Społeczność',
    description: 'Budujemy wspierające środowisko, w którym programiści uczą się od siebie nawzajem.'
  }
];
---

<Layout title="O nas">
  <section class="bg-gray-900 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Poznaj Przeprogramowanych</h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Łączymy świat programowania, biznesu i rozwoju. Naszą misją jest pokazanie szerszego spojrzenia na tworzenie oprogramowania.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">Założyciele</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-4xl mx-auto">
        {founders.map(founder => (
          <div class="flex flex-col items-center text-center">
            <div class="w-48 h-48 rounded-full bg-gray-200 mb-6 overflow-hidden">
               {/* Placeholder for image */}
               <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500">
                 {founder.name[0]}
               </div>
            </div>
            <h3 class="text-2xl font-bold text-gray-900">{founder.name}</h3>
            <p class="text-brand-orange font-medium mb-4">{founder.role}</p>
            <p class="text-gray-600 mb-4">{founder.bio}</p>
            <a href={founder.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-blue-600 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">Nasze Wartości</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value, index) => (
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="text-brand-orange font-bold text-xl mb-4">0{index + 1}</div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{value.title}</h3>
            <p class="text-gray-600 text-sm">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
