---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  features: string[];
}

const { title, description, features } = Astro.props;
---

<Layout title={title}>
  <div class="bg-gray-900 text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-black opacity-90 z-0"></div>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">{title}</h1>
      <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto mb-10 leading-relaxed">{description}</p>
      <a href="#" class="inline-block bg-brand-orange text-white px-8 py-4 rounded-full text-lg font-bold hover:bg-orange-600 transition-transform transform hover:scale-105 shadow-lg">
        Dołącz do kursu
      </a>
    </div>
  </div>

  <div class="container mx-auto px-4 py-20">
    <h2 class="text-3xl font-bold text-center mb-16 text-gray-900">Czego się nauczysz?</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {features.map((feature) => (
        <div class="flex items-start bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <div class="flex-shrink-0 w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center mr-4 text-brand-orange">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <span class="text-lg font-medium text-gray-700 pt-1">{feature}</span>
        </div>
      ))}
    </div>
  </div>
</Layout>
