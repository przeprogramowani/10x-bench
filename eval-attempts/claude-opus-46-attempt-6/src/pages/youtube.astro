---
import Layout from '../layouts/Layout.astro';
import VideoCard from '../components/VideoCard';
import { videos, contact } from '../data/content';
---

<Layout
  title="YouTube"
  description="Filmy Przeprogramowani na YouTube — tutoriale, recenzje narzędzi AI i porady dla programistów. Subskrybuj nasz kanał."
  canonicalPath="/youtube"
>
  <!-- Header -->
  <section class="pt-32 pb-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl">YouTube</h1>
        <p class="mt-6 text-lg leading-relaxed text-slate-400">
          Najnowsze filmy z kanału Przeprogramowani. Tutoriale, recenzje narzędzi AI, porady
          dotyczące kariery i programowania — wszystko w jednym miejscu.
        </p>
        <a
          href={contact.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-6 inline-flex items-center gap-2 rounded-lg bg-red-600/20 px-5 py-2.5 text-sm font-semibold text-red-400 transition-colors hover:bg-red-600/30"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Subskrybuj kanał
        </a>
      </div>
    </div>
  </section>

  <!-- Videos grid -->
  <section class="border-t border-slate-800/50 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-white">Najnowsze filmy</h2>
      <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {videos.map((video) => (
          <VideoCard video={video} />
        ))}
      </div>
    </div>
  </section>

  <!-- RSS Feed info -->
  <section class="border-t border-slate-800/50 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col items-center gap-3 text-center sm:flex-row sm:justify-center">
        <svg class="h-5 w-5 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
        </svg>
        <p class="text-sm text-slate-400">
          Subskrybuj nasz <a href={contact.youtubeRss} target="_blank" rel="noopener noreferrer" class="text-indigo-400 underline hover:text-indigo-300">kanał RSS</a>, aby nie przegapić nowych filmów.
        </p>
      </div>
    </div>
  </section>
</Layout>
