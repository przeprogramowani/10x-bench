---
import Layout from '../layouts/Layout.astro';
import PodcastCard from '../components/PodcastCard';
import { podcasts } from '../data/content';
---

<Layout
  title="Podcast"
  description="Podcasty Przeprogramowani — rozmowy o programowaniu, karierze w IT i sztucznej inteligencji. Słuchaj na Spotify."
  canonicalPath="/podcast"
>
  <!-- Header -->
  <section class="pt-32 pb-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl">Podcast</h1>
        <p class="mt-6 text-lg leading-relaxed text-slate-400">
          Dwa podcasty, jedna misja — pomagamy programistom lepiej rozumieć technologię, karierę
          i sztuczną inteligencję. Słuchaj na Spotify lub w ulubionej aplikacji podcastowej.
        </p>
      </div>
    </div>
  </section>

  {podcasts.map((show) => (
    <section class="border-t border-slate-800/50 py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
          <h2 class="text-2xl font-bold text-white">{show.name}</h2>
          <a
            href={show.spotifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-lg bg-green-600/20 px-4 py-2 text-sm font-semibold text-green-400 transition-colors hover:bg-green-600/30"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
            Słuchaj na Spotify
          </a>
        </div>
        <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {show.episodes.map((ep) => (
            <PodcastCard episode={ep} />
          ))}
        </div>
      </div>
    </section>
  ))}
</Layout>
