---
import { courses } from '../data/courses';
import CourseCard from './CourseCard.astro';
import CourseDetails from './CourseDetails.tsx';
---

<section id="kursy" class="py-16 md:py-24">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="section-title">Nasze kursy</h2>
      <p class="section-subtitle">Praktyczna wiedza od doświadczonych programistów</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {courses.map((course) => (
        <CourseCard course={course} />
      ))}
    </div>

    <!-- React tab switcher for course modules -->
    <div class="mt-12">
      <h3 class="text-xl font-bold text-white mb-6 text-center">Moduły kursów</h3>
      <CourseDetails client:visible courses={courses} />
    </div>
  </div>
</section>
