---
import type { TeamMember } from '../data/team';

interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
---

<div class="card flex flex-col items-center text-center">
  <!-- Initials avatar -->
  <div class="w-20 h-20 flex items-center justify-center rounded-full bg-gradient-to-br from-blue-600 to-blue-800 text-white text-2xl font-bold mb-4">
    {member.initials}
  </div>

  <h3 class="text-xl font-bold text-white">{member.name}</h3>
  <p class="text-blue-400 text-sm font-medium mt-1">{member.role}</p>
  <p class="text-slate-400 text-sm mt-3">{member.bio}</p>

  <!-- Experience badges -->
  <div class="flex flex-wrap justify-center gap-2 mt-4">
    {member.experience.map((exp) => (
      <span class="px-2 py-1 text-xs bg-slate-800 text-slate-300 rounded-md">{exp}</span>
    ))}
  </div>

  <!-- LinkedIn -->
  <a
    href={member.linkedinUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="mt-4 text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center gap-1"
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    LinkedIn
  </a>
</div>
