---
import Layout from '../layouts/Layout.astro';
import PodcastEpisodeCard from '../components/PodcastEpisodeCard.astro';
import { podcastSeries } from '../data/podcasts';
---

<Layout title="Podcast — Przeprogramowani" description="Dwa podcasty o programowaniu, karierze w IT i sztucznej inteligencji.">
  <!-- Hero -->
  <section class="py-16 md:py-24">
    <div class="container-narrow">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white">Podcasty</h1>
        <p class="text-xl text-slate-400 mt-4">
          Dwa podcasty o programowaniu, karierze i AI. Słuchaj na Spotify i Apple Podcasts.
        </p>
      </div>
    </div>
  </section>

  {podcastSeries.map((series) => (
    <section class="border-t border-slate-800 py-16 md:py-24">
      <div class="container-narrow">
        <!-- Series header -->
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-white">{series.title}</h2>
            <p class="text-slate-400 mt-2">{series.description}</p>
            <p class="text-blue-400 text-sm font-medium mt-2">{series.episodeCount} odcinków</p>
          </div>

          <div class="flex flex-wrap gap-3">
            <a
              href={series.spotifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary text-sm px-4 py-2"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              Spotify
            </a>
            {series.applePodcastsUrl && (
              <a
                href={series.applePodcastsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-secondary text-sm px-4 py-2"
              >
                Apple Podcasts
              </a>
            )}
          </div>
        </div>

        <!-- Episodes grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {series.episodes.map((episode) => (
            <PodcastEpisodeCard episode={episode} seriesName={series.title} />
          ))}
        </div>
      </div>
    </section>
  ))}
</Layout>
