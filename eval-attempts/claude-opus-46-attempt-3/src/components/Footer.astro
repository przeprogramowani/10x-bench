---
import { siteConfig } from '../data/site';
---

<footer class="bg-surface-900 border-t border-white/10 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <span class="text-lg font-bold bg-gradient-to-r from-brand-400 to-brand-500 bg-clip-text text-transparent">
          &lt;/&gt; Przeprogramowani
        </span>
        <p class="mt-3 text-sm text-surface-200 max-w-xs">
          {siteConfig.tagline}. Kursy, podcast i społeczność dla ambitnych programistów.
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-3">Nawigacja</h3>
        <ul class="space-y-2 text-sm text-surface-200">
          <li><a href="/" class="hover:text-white transition-colors">Strona główna</a></li>
          <li><a href="/o-nas" class="hover:text-white transition-colors">O nas</a></li>
          <li><a href="/podcast" class="hover:text-white transition-colors">Podcast</a></li>
          <li><a href="/youtube" class="hover:text-white transition-colors">YouTube</a></li>
        </ul>
      </div>

      <!-- Socials -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-3">Znajdź nas</h3>
        <ul class="space-y-2 text-sm text-surface-200">
          <li><a href={siteConfig.socials.youtube} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">YouTube</a></li>
          <li><a href={siteConfig.socials.spotify} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Spotify</a></li>
          <li><a href={siteConfig.socials.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">LinkedIn</a></li>
          <li><a href={siteConfig.socials.github} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">GitHub</a></li>
          <li><a href={`mailto:${siteConfig.contact}`} class="hover:text-white transition-colors">{siteConfig.contact}</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-white/10 text-center text-sm text-surface-200">
      <p>&copy; {new Date().getFullYear()} Przeprogramowani. Wszelkie prawa zastrzeżone.</p>
    </div>
  </div>
</footer>
