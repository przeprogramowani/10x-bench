---
import Layout from '../layouts/Layout.astro';
import VideoCard from '../components/VideoCard';
import { youtubeVideos, siteConfig } from '../data/site';
---

<Layout title="YouTube" description="Kanał YouTube Przeprogramowani — filmy o programowaniu, AI, TypeScript, React i architekturze frontendowej.">
  <section class="py-20 sm:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-16 max-w-3xl">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-600/15 border border-red-500/20 text-red-400 text-sm font-medium mb-6">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          YouTube
        </div>

        <h1 class="text-4xl sm:text-5xl font-bold text-white">YouTube</h1>
        <p class="mt-6 text-lg text-surface-200 leading-relaxed">
          Na naszym kanale dzielimy się wiedzą o programowaniu, AI i nowoczesnych
          technologiach. Praktyczne tutoriale, przeglądy narzędzi i rozmowy z ekspertami.
        </p>

        <div class="mt-8">
          <a
            href={siteConfig.socials.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 bg-red-600 hover:bg-red-500 text-white font-semibold rounded-xl transition-colors text-sm"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            Subskrybuj kanał
          </a>
        </div>
      </div>

      <!-- Videos grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {youtubeVideos.map(video => (
          <VideoCard
            title={video.title}
            description={video.description}
            date={video.date}
            url={video.url}
          />
        ))}
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <a
          href={siteConfig.socials.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-red-400 hover:text-red-300 font-semibold transition-colors"
        >
          Zobacz wszystkie filmy na YouTube
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
