---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Przeprogramowani — szersze spojrzenie na programowanie. Kursy, podcast i społeczność dla programistów." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://przeprogramowani.pl");
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pl_PL" />
    <meta property="og:site_name" content="Przeprogramowani" />
    <meta property="og:url" content={canonicalURL.href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="canonical" href={canonicalURL.href} />

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-surface-950/80 backdrop-blur-lg border-b border-surface-800/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 text-xl font-bold text-white hover:text-brand-400 transition-colors">
            <svg viewBox="0 0 32 32" fill="none" class="w-8 h-8" xmlns="http://www.w3.org/2000/svg">
              <rect width="32" height="32" rx="6" fill="#4F46E5"/>
              <text x="50%" y="54%" dominant-baseline="middle" text-anchor="middle" font-family="system-ui, sans-serif" font-weight="700" font-size="18" fill="white">P</text>
            </svg>
            Przeprogramowani
          </a>

          <!-- Desktop nav -->
          <div class="hidden md:flex items-center gap-1">
            <a href="/" class="px-3 py-2 text-sm font-medium text-surface-300 hover:text-white transition-colors rounded-lg hover:bg-surface-800/50">Strona główna</a>
            <a href="/o-nas" class="px-3 py-2 text-sm font-medium text-surface-300 hover:text-white transition-colors rounded-lg hover:bg-surface-800/50">O nas</a>
            <a href="/podcast" class="px-3 py-2 text-sm font-medium text-surface-300 hover:text-white transition-colors rounded-lg hover:bg-surface-800/50">Podcast</a>
            <a href="/youtube" class="px-3 py-2 text-sm font-medium text-surface-300 hover:text-white transition-colors rounded-lg hover:bg-surface-800/50">YouTube</a>
            <a
              href="https://10xdevs.pl"
              target="_blank"
              rel="noopener noreferrer"
              class="ml-3 px-4 py-2 text-sm font-semibold text-white bg-brand-600 hover:bg-brand-500 rounded-lg transition-colors"
            >
              10xDevs 3.0
            </a>
          </div>

          <!-- Mobile hamburger -->
          <button
            id="mobile-menu-btn"
            class="md:hidden p-2 text-surface-300 hover:text-white transition-colors"
            aria-label="Otwórz menu"
            aria-expanded="false"
          >
            <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-surface-800/50">
        <div class="px-4 py-3 space-y-1">
          <a href="/" class="block px-3 py-2 text-sm font-medium text-surface-300 hover:text-white hover:bg-surface-800/50 rounded-lg transition-colors">Strona główna</a>
          <a href="/o-nas" class="block px-3 py-2 text-sm font-medium text-surface-300 hover:text-white hover:bg-surface-800/50 rounded-lg transition-colors">O nas</a>
          <a href="/podcast" class="block px-3 py-2 text-sm font-medium text-surface-300 hover:text-white hover:bg-surface-800/50 rounded-lg transition-colors">Podcast</a>
          <a href="/youtube" class="block px-3 py-2 text-sm font-medium text-surface-300 hover:text-white hover:bg-surface-800/50 rounded-lg transition-colors">YouTube</a>
          <a
            href="https://10xdevs.pl"
            target="_blank"
            rel="noopener noreferrer"
            class="block px-3 py-2 text-sm font-semibold text-brand-400 hover:text-brand-300 transition-colors"
          >
            10xDevs 3.0 →
          </a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-surface-800/50 bg-surface-950">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Brand -->
          <div>
            <a href="/" class="text-lg font-bold text-white">Przeprogramowani</a>
            <p class="mt-2 text-sm text-surface-400">Szersze spojrzenie na programowanie. Kursy, podcast i społeczność od 2017 roku.</p>
          </div>

          <!-- Navigation -->
          <div>
            <h3 class="text-sm font-semibold text-surface-200 uppercase tracking-wider">Nawigacja</h3>
            <ul class="mt-3 space-y-2">
              <li><a href="/" class="text-sm text-surface-400 hover:text-white transition-colors">Strona główna</a></li>
              <li><a href="/o-nas" class="text-sm text-surface-400 hover:text-white transition-colors">O nas</a></li>
              <li><a href="/podcast" class="text-sm text-surface-400 hover:text-white transition-colors">Podcast</a></li>
              <li><a href="/youtube" class="text-sm text-surface-400 hover:text-white transition-colors">YouTube</a></li>
            </ul>
          </div>

          <!-- Courses -->
          <div>
            <h3 class="text-sm font-semibold text-surface-200 uppercase tracking-wider">Kursy</h3>
            <ul class="mt-3 space-y-2">
              <li><a href="https://10xdevs.pl" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">10xDevs 3.0</a></li>
              <li><a href="https://opanujfrontend.pl" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">Opanuj Frontend</a></li>
              <li><a href="https://opanujtypescript.pl" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">Opanuj TypeScript</a></li>
            </ul>
          </div>

          <!-- Social & Contact -->
          <div>
            <h3 class="text-sm font-semibold text-surface-200 uppercase tracking-wider">Kontakt</h3>
            <ul class="mt-3 space-y-2">
              <li><a href="https://www.youtube.com/c/przeprogramowani" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">YouTube</a></li>
              <li><a href="https://open.spotify.com/show/3yVvOAXSYq6sQB02w4A4wo" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">Spotify</a></li>
              <li><a href="https://www.linkedin.com/company/przeprogramowani" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">LinkedIn</a></li>
              <li><a href="https://przeprogramowani.substack.com" target="_blank" rel="noopener noreferrer" class="text-sm text-surface-400 hover:text-white transition-colors">Substack</a></li>
              <li><a href="mailto:kontakt@przeprogramowani.pl" class="text-sm text-surface-400 hover:text-white transition-colors">kontakt@przeprogramowani.pl</a></li>
            </ul>
          </div>
        </div>

        <div class="mt-10 pt-8 border-t border-surface-800/50 text-center">
          <p class="text-sm text-surface-500">&copy; {new Date().getFullYear()} Przeprogramowani. Wszelkie prawa zastrzeżone.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu script -->
    <script>
      const btn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");
      const hamburgerIcon = document.getElementById("hamburger-icon");
      const closeIcon = document.getElementById("close-icon");

      btn?.addEventListener("click", () => {
        const isOpen = menu?.classList.contains("hidden") === false;
        menu?.classList.toggle("hidden");
        hamburgerIcon?.classList.toggle("hidden");
        closeIcon?.classList.toggle("hidden");
        btn.setAttribute("aria-expanded", String(!isOpen));
      });
    </script>
  </body>
</html>
