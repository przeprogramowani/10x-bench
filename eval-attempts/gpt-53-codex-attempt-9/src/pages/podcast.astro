---
import MainLayout from '../layouts/MainLayout.astro';
import { fetchPodcastShows } from '../lib/content';

const podcastShows = await fetchPodcastShows(6);
const dateFormatter = new Intl.DateTimeFormat('pl-PL', { dateStyle: 'medium' });
---

<MainLayout
  title="Podcast - Przeprogramowani"
  description="Najnowsze odcinki podcastow Przeprogramowanych: Przeprogramowani Podcast i Opanuj.AI Podcast."
>
  <section class="section-shell pt-14">
    <div class="max-w-3xl">
      <p class="text-sm font-semibold uppercase tracking-wide text-cyan-700">Podcast</p>
      <h1 class="mt-3 font-display text-4xl font-semibold text-slate-900 sm:text-5xl">Najnowsze odcinki</h1>
      <p class="mt-5 text-lg text-slate-700">
        Dwie serie podcastowe Przeprogramowanych: rozmowy o software engineeringu oraz comiesieczne podsumowania swiata AI.
      </p>
    </div>
  </section>

  <section class="section-shell mt-10 space-y-10">
    {
      podcastShows.map((show) => (
        <article class="rounded-3xl border border-slate-200 bg-white p-6 sm:p-8">
          <div class="grid gap-6 lg:grid-cols-[280px_1fr]">
            <div>
              <img src={show.cover} alt={show.title} class="aspect-square w-full rounded-2xl object-cover" loading="lazy" />
              <h2 class="mt-4 font-display text-2xl font-semibold text-slate-900">{show.title}</h2>
              <p class="mt-2 text-sm text-slate-600">{show.description}</p>
              <a
                href={show.url}
                target="_blank"
                rel="noopener noreferrer"
                class="mt-4 inline-flex rounded-xl border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:border-cyan-300 hover:text-cyan-700"
              >
                Otworz podcast
              </a>
            </div>

            <div class="space-y-4">
              {
                show.episodes.map((episode) => (
                  <a
                    href={episode.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block rounded-2xl border border-slate-200 p-4 transition hover:border-cyan-300 hover:bg-cyan-50/50"
                  >
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">
                      {dateFormatter.format(new Date(episode.publishedAt))} â€¢ {episode.duration}
                    </p>
                    <h3 class="mt-1 text-base font-semibold text-slate-900">{episode.title}</h3>
                    <p class="mt-2 line-clamp-2 text-sm text-slate-600">{episode.description}</p>
                  </a>
                ))
              }
            </div>
          </div>
        </article>
      ))
    }
  </section>
</MainLayout>
