---
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Przeprogramowani.pl - Szersze spojrzenie na programowanie',
  description = 'Najwyższej jakości materiały edukacyjne dla programistów. Kursy: 10xDevs, Opanuj Frontend, Opanuj TypeScript. Podcast, YouTube i więcej!'
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#6366f1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50">
    <Navigation client:load />
    <slot />
    <Footer client:load />
  </body>
</html>
