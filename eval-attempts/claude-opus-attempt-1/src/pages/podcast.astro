---
import Layout from "../layouts/Layout.astro";
import PodcastCard from "../components/PodcastCard.astro";
import { podcasts } from "../data/podcasts";
---

<Layout title="Podcast — Przeprogramowani.pl" description="Dwa podcasty o programowaniu i AI. Przeprogramowani i Opanuj.AI Podcast.">
  <!-- Header -->
  <section class="px-4 pt-20 pb-12">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="text-4xl font-extrabold text-white md:text-5xl">Podcasty</h1>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-400">
        Dwa podcasty, jedno podejście &mdash; praktyczna wiedza dla developerów. Słuchaj o programowaniu, karierze i AI.
      </p>
    </div>
  </section>

  <!-- Podcasts -->
  {
    podcasts.map((podcast) => (
      <section class="px-4 py-8">
        <div class="mx-auto max-w-4xl">
          <!-- Podcast header -->
          <div class={`rounded-2xl bg-gradient-to-r ${podcast.coverColor} p-6 md:p-8`}>
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
              <div>
                <h2 class="text-2xl font-bold text-white">{podcast.name}</h2>
                <p class="mt-2 max-w-lg text-sm text-white/80">{podcast.description}</p>
                <p class="mt-2 text-sm font-medium text-white/60">
                  {podcast.episodeCount} odcinków
                </p>
              </div>
              <div class="flex shrink-0 gap-3">
                <a
                  href={podcast.appleUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="rounded-lg bg-white/20 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm transition-colors hover:bg-white/30"
                >
                  Apple Podcasts
                </a>
                <a
                  href={podcast.spotifyUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="rounded-lg bg-white/20 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm transition-colors hover:bg-white/30"
                >
                  Spotify
                </a>
              </div>
            </div>
          </div>

          <!-- Episodes -->
          <div class="mt-6 space-y-3">
            <h3 class="text-sm font-semibold uppercase tracking-wider text-slate-400">
              Ostatnie odcinki
            </h3>
            {podcast.episodes.map((episode) => (
              <PodcastCard episode={episode} />
            ))}
          </div>
        </div>
      </section>
    ))
  }

  <!-- Spacer -->
  <div class="pb-12"></div>
</Layout>
