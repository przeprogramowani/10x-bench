---
const stats = [
  { value: "7+", label: "lat na rynku" },
  { value: "3 700+", label: "absolwentów kursów" },
  { value: "15 000+", label: "społeczność" },
  { value: "140+", label: "odcinków podcastów" },
];
---

<section class="border-y border-surface-700/50 bg-surface-800/30 px-4 py-16">
  <div class="mx-auto max-w-6xl">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {
        stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl font-extrabold text-white md:text-4xl">{stat.value}</div>
            <div class="mt-1 text-sm text-slate-400">{stat.label}</div>
          </div>
        ))
      }
    </div>
  </div>
</section>
