---
import type { PodcastEpisode } from "../data/podcasts";

interface Props {
  episode: PodcastEpisode;
}

const { episode } = Astro.props;
---

<a
  href={episode.url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-xl border border-surface-700/50 bg-surface-800/50 p-5 transition-all hover:-translate-y-0.5 hover:border-surface-600/50 hover:bg-surface-800"
>
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0 flex-1">
      <h3 class="font-semibold text-white transition-colors group-hover:text-primary-400">
        {episode.title}
      </h3>
      <p class="mt-2 text-sm text-slate-400 line-clamp-2">{episode.description}</p>
    </div>
    <svg
      class="mt-1 h-5 w-5 shrink-0 text-slate-500 transition-colors group-hover:text-primary-400"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </div>
  <div class="mt-3 flex items-center gap-3 text-xs text-slate-500">
    <span>{episode.date}</span>
    <span class="h-1 w-1 rounded-full bg-slate-600"></span>
    <span>{episode.duration}</span>
  </div>
</a>
