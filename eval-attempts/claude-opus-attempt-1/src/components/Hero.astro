<section class="relative overflow-hidden px-4 py-20 md:py-32">
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute left-1/2 top-0 h-[600px] w-[800px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-primary-500/10 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 h-[400px] w-[600px] translate-x-1/4 rounded-full bg-accent-500/5 blur-3xl"></div>
  </div>

  <div class="mx-auto max-w-4xl text-center">
    <div class="animate-fade-in-up">
      <span class="inline-block rounded-full bg-accent-500/10 px-4 py-1.5 text-sm font-medium text-accent-400">
        10xDevs 3.0 &mdash; cohort maj 2026
      </span>
    </div>

    <h1 class="animate-fade-in-up mt-6 text-4xl font-extrabold tracking-tight text-white md:text-6xl lg:text-7xl" style="animation-delay: 0.1s">
      Edukacja technologiczna<br />
      <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
        w epoce AI
      </span>
    </h1>

    <p class="animate-fade-in-up mx-auto mt-6 max-w-2xl text-lg text-slate-400 md:text-xl" style="animation-delay: 0.2s">
      Szersze spojrzenie na programowanie. Podcasty, kursy i społeczność
      <strong class="text-slate-200">15 000+</strong> ambitnych developerów.
    </p>

    <div class="animate-fade-in-up mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row" style="animation-delay: 0.3s">
      <a
        href="https://10xdevs.pl"
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-xl bg-accent-500 px-8 py-3.5 text-base font-semibold text-white shadow-lg shadow-accent-500/25 transition-all hover:-translate-y-0.5 hover:bg-accent-600 hover:shadow-xl hover:shadow-accent-500/30"
      >
        Dołącz do 10xDevs 3.0
      </a>
      <a
        href="/podcast"
        class="rounded-xl border border-surface-700 bg-surface-800/50 px-8 py-3.5 text-base font-semibold text-slate-200 transition-all hover:-translate-y-0.5 hover:border-surface-600 hover:bg-surface-800"
      >
        Słuchaj podcastów
      </a>
    </div>
  </div>
</section>
