---
const socialLinks = [
  { label: "YouTube", url: "https://www.youtube.com/@Przeprogramowani", icon: "youtube" },
  { label: "Spotify", url: "https://open.spotify.com/show/1M7HPImXOLQT9gS2PNXiEh", icon: "spotify" },
  { label: "Twitter / X", url: "https://twitter.com/psmyrdek", icon: "twitter" },
  { label: "LinkedIn", url: "https://linkedin.com/company/przeprogramowani", icon: "linkedin" },
  { label: "GitHub", url: "https://github.com/psmyrdek", icon: "github" },
];

const footerLinks = [
  { label: "Opanuj Frontend", url: "https://opanujfrontend.pl" },
  { label: "Opanuj TypeScript", url: "https://opanujtypescript.pl" },
  { label: "10xDevs", url: "https://10xdevs.pl" },
  { label: "Newsletter 3-2-1", url: "https://przeprogramowani.pl/newsletter" },
];
---

<footer class="border-t border-surface-700/50 bg-surface-900">
  <div class="mx-auto max-w-6xl px-4 py-12">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <a href="/" class="text-lg font-bold text-white">
          Przeprogramowani<span class="text-primary-400">.pl</span>
        </a>
        <p class="mt-3 text-sm text-slate-400">
          Przestrzeń dla ambitnych developerów.<br />
          Szersze spojrzenie na programowanie.
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-slate-400">Produkty</h3>
        <ul class="space-y-2">
          {
            footerLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-slate-300 transition-colors hover:text-white"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-slate-400">Social media</h3>
        <div class="flex flex-wrap gap-3">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="rounded-lg bg-surface-800 p-2.5 text-slate-400 transition-colors hover:bg-surface-700 hover:text-white"
                aria-label={link.label}
                title={link.label}
              >
                {link.icon === "youtube" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                )}
                {link.icon === "spotify" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
                  </svg>
                )}
                {link.icon === "twitter" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                  </svg>
                )}
                {link.icon === "linkedin" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                )}
                {link.icon === "github" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-10 border-t border-surface-700/50 pt-6 text-center text-sm text-slate-500">
      &copy; {new Date().getFullYear()} Przeprogramowani.pl. Wszelkie prawa zastrzeżone.
    </div>
  </div>
</footer>
