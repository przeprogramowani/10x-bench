---
import { courses } from "../data/courses";

const colorMap = {
  indigo: {
    border: "border-primary-500/20",
    bg: "bg-primary-500/5",
    badge: "bg-primary-500/10 text-primary-400",
    icon: "text-primary-400",
    button: "bg-primary-500 hover:bg-primary-600 shadow-primary-500/25",
  },
  violet: {
    border: "border-violet-500/20",
    bg: "bg-violet-500/5",
    badge: "bg-violet-500/10 text-violet-400",
    icon: "text-violet-400",
    button: "bg-violet-500 hover:bg-violet-600 shadow-violet-500/25",
  },
  emerald: {
    border: "border-accent-500/20",
    bg: "bg-accent-500/5",
    badge: "bg-accent-500/10 text-accent-400",
    icon: "text-accent-400",
    button: "bg-accent-500 hover:bg-accent-600 shadow-accent-500/25",
  },
};
---

<section class="px-4 py-20">
  <div class="mx-auto max-w-6xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-white md:text-4xl">Nasze kursy</h2>
      <p class="mx-auto mt-3 max-w-xl text-slate-400">
        Od frontendu po AI &mdash; rozwijaj swoje umiejętności z praktycznymi kursami tworzonymi przez doświadczonych developerów.
      </p>
    </div>

    <div class="mt-12 grid gap-6 md:grid-cols-3">
      {
        courses.map((course) => {
          const colors = colorMap[course.color];
          return (
            <div class={`group relative rounded-2xl border ${colors.border} ${colors.bg} p-6 transition-all hover:-translate-y-1 hover:shadow-lg`}>
              {course.badge && (
                <span class={`absolute -top-3 right-4 rounded-full ${colors.badge} px-3 py-1 text-xs font-semibold`}>
                  {course.badge}
                </span>
              )}

              <h3 class="text-xl font-bold text-white">{course.title}</h3>
              <p class="mt-3 text-sm text-slate-400">{course.description}</p>

              <ul class="mt-5 space-y-2">
                {course.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-slate-300">
                    <svg class={`h-4 w-4 shrink-0 ${colors.icon}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href={course.url}
                target="_blank"
                rel="noopener noreferrer"
                class={`mt-6 inline-block rounded-lg ${colors.button} px-5 py-2.5 text-sm font-semibold text-white shadow-lg transition-all hover:shadow-xl`}
              >
                Dowiedz się więcej
              </a>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
