---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const courses = [
  {
    id: '10xdevs',
    title: '10xDevs 3.0',
    subtitle: 'Programuj z AI',
    description: 'Kompletny program AI-first development. Naucz się wykorzystywać AI w całym cyklu wytwarzania oprogramowania.',
    color: 'from-orange-600 to-orange-800',
    borderColor: 'border-orange-500',
    stats: ['3,700+ absolwentów', '6 tygodni', 'Live Q&A'],
    price: '1,743 PLN',
    fullPrice: '2,990 PLN',
    url: 'https://10xdevs.pl',
    features: [
      'Prework - AI fundamentals, tool setup',
      '10xWorkflow - Research → Plan → Implement',
      'One-Week AI-First MVP',
      'AI Development Quality & Maintenance',
      'Large Scale & Legacy Projects',
      'AI-Native Teamwork'
    ]
  },
  {
    id: 'frontend',
    title: 'Opanuj Frontend',
    subtitle: 'AI Edition',
    description: 'Zostań nowoczesnym frontend developerem. 5 obszarnych modułów o frontendzie, testowaniu, CI/CD i architekturze.',
    color: 'from-pink-600 to-pink-800',
    borderColor: 'border-pink-500',
    stats: ['383+ zapisanych', '10 tygodni', '4 edycje'],
    price: 'Kontakt',
    fullPrice: 'Zapytaj o cenę',
    url: 'https://www.opanujfrontend.pl',
    features: [
      'Patterns and Best Practices',
      'Frontend Quality Engineering',
      'Production Deployment',
      'Team Frontend',
      'Application Architecture',
      'Bonus: AI Edition'
    ]
  },
  {
    id: 'typescript',
    title: 'Opanuj TypeScript',
    subtitle: 'Frontend Pro',
    description: 'Zaawansowany TypeScript 5 i React 19. Dla developerów chcących osiągnąć poziom eksperta.',
    color: 'from-sky-600 to-sky-800',
    borderColor: 'border-sky-500',
    stats: ['121+ zapisanych', 'TypeScript 5', 'React 19'],
    price: 'Kontakt',
    fullPrice: 'Zapytaj o cenę',
    url: 'https://www.opanujtypescript.pl',
    features: [
      'Core Pro - Modern TypeScript',
      'React Pro - TypeScript + React 19',
      'Generic types scenarios',
      'Advanced typing patterns',
      'Backend communication',
      'Full-stack frameworks'
    ]
  }
];
---

<Layout title="Kursy">
  <Header slot="header" />

  <section class="py-16 sm:py-20">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-white font-heading mb-6">
          Nasze Kursy
        </h1>
        <p class="text-lg text-gray-400">
          Profesjonalne programy edukacyjne dla ambitnych programistów. 
          Praktyczna wiedza, która przekłada się na realne umiejętności.
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        {courses.map(course => (
          <div class="card overflow-hidden">
            <div class={`h-2 bg-gradient-to-r ${course.color}`} />
            <div class="p-6">
              <div class="flex items-center gap-2 mb-2">
                <span class={`text-xs font-bold uppercase tracking-wider ${course.borderColor.replace('border-', 'text-')}`}>
                  {course.subtitle}
                </span>
              </div>
              <h2 class="text-2xl font-bold text-white font-heading mb-3">
                {course.title}
              </h2>
              <p class="text-gray-400 text-sm mb-6">
                {course.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-6">
                {course.stats.map(stat => (
                  <span class="text-xs bg-gray-800 text-gray-300 px-2 py-1 rounded">
                    {stat}
                  </span>
                ))}
              </div>

              <ul class="space-y-2 mb-6">
                {course.features.slice(0, 4).map(feature => (
                  <li class="flex items-start gap-2 text-sm text-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 mt-0.5 shrink-0" aria-hidden="true">
                      <polyline points="20 6 9 17 4 12" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <div class="flex items-center justify-between pt-4 border-t border-gray-800">
                <div>
                  <span class="text-lg font-bold text-white">{course.price}</span>
                  {course.fullPrice !== course.price && (
                    <span class="text-sm text-gray-500 line-through ml-2">{course.fullPrice}</span>
                  )}
                </div>
                <a
                  href={course.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`px-4 py-2 text-sm font-semibold rounded-lg transition-colors border ${course.borderColor} hover:opacity-80`}
                >
                  Szczegóły →
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 sm:py-20 bg-gray-900/50">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-white font-heading mb-6">
          Nie wiesz, który kurs wybrać?
        </h2>
        <p class="text-gray-400 mb-8">
          Skontaktuj się z nami, a pomożemy dobrać odpowiedni program do Twoich celów i poziomu zaawansowania.
        </p>
        <a href="mailto:kontakt@przeprogramowani.pl" class="btn-primary">
          Napisz do nas
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
