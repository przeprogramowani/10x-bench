import videos from '../data/videos.json';
---

<Layout title="Strona g≈Ç√≥wna">
  <!-- Hero Section with 10xDevs -->
  <section class="bg-gradient-to-r from-purple-500 to-pink-500 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">
          Przeprogramowani.pl
        </h1>
        <p class="text-2xl md:text-3xl mb-8 text-white/90">
          Szersze spojrzenie na programowanie
        </p>
        <p class="text-lg md:text-xl mb-12 max-w-3xl mx-auto text-white/80">
