---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Przeprogramowani - Szersze spojrzenie na programowanie',
  description = 'Kursy i szkolenia dla programistów - JavaScript, TypeScript, AI. Blog techniczny, podcast i newsletter dla ambitnych developerów.'
} = Astro.props;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Sora:wght@600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-gray-950 text-gray-100 antialiased font-sans">
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Sora', system-ui, sans-serif;
  }
</style>
