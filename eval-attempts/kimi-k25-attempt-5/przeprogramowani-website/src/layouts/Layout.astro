---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Przeprogramowani.pl - Szersze spojrzenie na programowanie. Edukacja, podcasty, kursy i społeczność dla programistów." } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="theme-color" content="#1a1a2e" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <title>{title} | Przeprogramowani.pl</title>
</head>
<body class="min-h-screen bg-[#1a1a2e] text-white">
  <slot />
</body>
</html>
