---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Strona nie znaleziona">
  <Navbar />
  
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
      <h2 class="text-2xl font-bold text-gray-700 mb-6">Strona nie została znaleziona</h2>
      <p class="text-gray-600 mb-8">Przepraszamy, ale strona, której szukasz, nie istnieje.</p>
      <a 
        href="/" 
        class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-lg transition-colors"
      >
        Wróć do strony głównej
      </a>
    </div>
  </section>

  <Footer />
</Layout>