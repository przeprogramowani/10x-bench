---
import Layout from '../../layouts/Layout.astro';
import Newsletter from '../../components/Newsletter';

const episodes = [
  {
    id: "1",
    title: "Doktor AI nadchodzi - ChatGPT Health vs Google MedGemma",
    description: "ChatGPT Health vs Google MedGemma 1.5 - giganci Generative AI chcą podbić świat medycyny. Czy już wkrótce będzie to realna alternatywa klasycznej służby zdrowia? Anthropic próbuje na swój sposób ugryźć temat etyki w AI.",
    duration: "01:23:04",
    date: "Luty 2026",
    imageUrl: "https://i3.ytimg.com/vi/_kQHwE6zAbM/maxresdefault.jpg"
  },
  {
    id: "2", 
    title: "Wielkie Podsumowanie AI w 2025",
    description: "Modele, Narzędzia, Przełomy, Liderzy, Firmy i Wpadki Influencerów. Kompleksowe podsumowanie roku w AI - co wydarzyło się w świecie sztucznej inteligencji?",
    duration: "01:47:28",
    date: "Styczeń 2026",
    imageUrl: "https://i3.ytimg.com/vi/KAJTsQbqBow/maxresdefault.jpg"
  },
  {
    id: "3",
    title: "Skills vs AgentsMD: 53% vs 100%",
    description: "Co poszło nie tak? Analiza porównawcza podejść do programowania z AI. Czy agenci są lepsi od skilli? Sprawdzamy w praktyce.",
    duration: "00:45:12",
    date: "Styczeń 2026",
    imageUrl: "https://i3.ytimg.com/vi/uwi39C2O8NI/maxresdefault.jpg"
  },
  {
    id: "4",
    title: "Apple zabiera się za NBA i nowy projekt No Code Poland",
    description: "O nowościach Apple, projekcie No Code Poland i tradycji w podcastingu. Rozmawiamy o tym, co nas ostatnio zainteresowało.",
    duration: "00:52:30",
    date: "Grudzień 2025",
    imageUrl: "https://i3.ytimg.com/vi/b-gOI128G2s/maxresdefault.jpg"
  },
  {
    id: "5",
    title: "Przełomowy rok 2025 - podsumowanie",
    description: "Notatki z ostatnich 12 miesięcy, nowości techniczne i rekomendacje serialowe. Podsumowujemy rok 2025.",
    duration: "01:15:00",
    date: "Grudzień 2025",
    imageUrl: "https://i3.ytimg.com/vi/WJLGzf7qq-c/maxresdefault.jpg"
  },
  {
    id: "6",
    title: "Nadchodzi koniec programowania (jakie znamy...)",
    description: "Prelekcja z Infoshare 2025 o przyszłości programowania w erze AI. Czy czeka nas koniec tradycyjnego kodowania?",
    duration: "00:58:45",
    date: "Listopad 2025",
    imageUrl: "https://i3.ytimg.com/vi/jjOYxKAk_j8/maxresdefault.jpg"
  }
];
---

<Layout title="Podcast">
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Podcasty
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Słuchaj naszych podcastów o technologii, AI i programowaniu
        </p>
        <div class="mt-6 inline-flex items-center gap-3 bg-indigo-100 text-indigo-700 px-6 py-3 rounded-full">
          <span class="font-semibold">Opanuj.AI Podcast</span>
          <span class="bg-indigo-500 text-white text-sm px-3 py-1 rounded-full">4000+ słuchaczy</span>
        </div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {episodes.map((episode) => (
          <article class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col border border-gray-100">
            <div class="relative h-48 bg-gray-200">
              <img
                src={episode.imageUrl}
                alt={episode.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
              <div class="absolute bottom-2 right-2 bg-black/70 text-white text-sm px-2 py-1 rounded">
                {episode.duration}
              </div>
            </div>
            
            <div class="p-6 flex-1 flex flex-col">
              <span class="text-sm text-indigo-600 font-medium mb-2">
                {episode.date}
              </span>
              <h3 class="text-lg font-semibold text-gray-900 mb-3 line-clamp-2">
                {episode.title}
              </h3>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-1">
                {episode.description}
              </p>
              <button class="w-full mt-auto bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                Słuchaj
              </button>
            </div>
          </article>
        ))}
      </div>

      <div class="mt-16 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-8 text-white text-center">
        <h2 class="text-2xl font-bold mb-4">Nie przegap żadnego odcinka</h2>
        <p class="text-indigo-100 mb-6 max-w-xl mx-auto">
          Zapisz się do newslettera i otrzymuj powiadomienia o nowych odcinkach prosto do swojej skrzynki!
        </p>
        <a
          href="https://przeprogramowani.substack.com"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50 transition-colors"
        >
          Zapisz się do newslettera
        </a>
      </div>
    </div>
  </section>
  <Newsletter client:load />
</Layout>
