---
import Layout from '../layouts/Layout.astro';
import PodcastSection from '../components/Podcast';
import Newsletter from '../components/Newsletter';
import Footer from '../components/Footer';
import Header from '../components/Header';
---

<Layout title="Podcast">
  <Header client:load />
  <main class="pt-16">
    <section class="py-24 bg-gradient-to-br from-green-900 via-emerald-900 to-slate-900 text-white">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 bg-green-500/20 text-green-400 text-sm font-semibold rounded-full mb-4">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse" />
          Najpopularniejszy podcast o AI w Polsce
        </div>
        <h1 class="text-5xl sm:text-6xl font-bold mb-6">Opanuj AI Podcast</h1>
        <p class="text-xl text-emerald-200">Rozmowy o programowaniu, AI i rozwoju w epoce Generative AI</p>
      </div>
    </section>
    <PodcastSection client:load />
    <Newsletter client:load />
  </main>
  <Footer />
</Layout>