---
import Layout from '../layouts/Layout.astro';
import YoutubeSection from '../components/Youtube';
import Newsletter from '../components/Newsletter';
import Footer from '../components/Footer';
import Header from '../components/Header';
---

<Layout title="YouTube">
  <Header client:load />
  <main class="pt-16">
    <section class="py-24 bg-gradient-to-br from-red-900 via-pink-900 to-slate-900 text-white">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 bg-red-500/20 text-red-400 text-sm font-semibold rounded-full mb-4">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Kanał Przeprogramowani
        </div>
        <h1 class="text-5xl sm:text-6xl font-bold mb-6">YouTube</h1>
        <p class="text-xl text-red-200">Praktyczne poradniki, webinary i materiały edukacyjne</p>
      </div>
    </section>
    <YoutubeSection client:load />
    <Newsletter client:load />
  </main>
  <Footer />
</Layout>