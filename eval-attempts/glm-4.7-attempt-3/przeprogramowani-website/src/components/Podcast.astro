---
interface PodcastEpisode {
  title: string;
  description: string;
  duration: string;
  link: string;
}

const podcastEpisodes: PodcastEpisode[] = [
  {
    title: 'Doktor AI nadchodzi - ChatGPT Health vs Google MedGemma',
    description: 'ChatGPT Health vs Google MedGemma 1.5 - giganci Generative AI chcą podbić świat medycyny.',
    duration: '01:23:04',
    link: 'https://podcasters.spotify.com/pod/show/opanujai/episodes/Doktor-AI-nadchodzi---ChatGPT-Health-vs-Google-MedGemma-e3eg2n4'
  },
  {
    title: 'Wielkie Podsumowanie AI w 2025',
    description: 'Modele, Narzędzia, Przełomy, Liderzy, Firmy i Wpadki Influencerów',
    duration: '01:47:28',
    link: 'https://podcasters.spotify.com/pod/show/opanujai/episodes/Wielkie-Podsumowanie-AI-w-2025-e3dcmq5'
  },
  {
    title: 'GPT-5.2 to GEMINI KILLER?',
    description: 'Google VS OpenAI, MCP w Linux Foundation i wątpliwości wokół benchmarków METR',
    duration: '00:58:41',
    link: 'https://podcasters.spotify.com/pod/show/opanujai/episodes/GPT-5-2-to-GEMINI-KILLER-e3d20pf'
  },
  {
    title: 'Cursor 2.0 vs Windsurf SWE-1.5',
    description: 'Nowa era programowania z AI już tu jest (+ DGX Spark, ChatGPT Atlas)',
    duration: '01:14:37',
    link: 'https://podcasters.spotify.com/pod/show/opanujai/episodes/Cursor-2-0-vs-Windsurf-SWE-1-5-e3af168'
  }
];
---

<div class="py-20">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between mb-12">
      <div>
        <h2 class="text-4xl font-bold text-gray-900 mb-2">Podcasty</h2>
        <p class="text-lg text-gray-600">O technologii, AI i programowaniu</p>
      </div>
      <a
        href="https://podcasters.spotify.com/pod/show/przeprogramowani"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden md:flex items-center gap-2 px-6 py-3 bg-brand-600 text-white rounded-full font-semibold hover:bg-brand-700 transition-colors"
      >
        Wszystkie podcasty
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <div class="space-y-4">
      {podcastEpisodes.map((episode, index) => (
        <div
          key={index}
          class="group relative p-6 bg-white border-2 border-gray-100 rounded-2xl hover:border-brand-300 transition-all duration-300 hover:shadow-xl hover:shadow-brand-500/10"
        >
          <a href={episode.link} target="_blank" rel="noopener noreferrer">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-brand-100 to-purple-100 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-brand-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14.5c-2.49 0-4.5-2.01-4.5-4.5S9.51 7.5 12 7.5s4.5 2.01 4.5 4.5-2.01 4.5-4.5 4.5zm0-5.5c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1z" />
                </svg>
              </div>

              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-xs font-semibold text-brand-600 bg-brand-50 px-2 py-1 rounded-full">
                    Opanuj.AI Podcast
                  </span>
                  <span class="text-sm text-gray-500">{episode.duration}</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 group-hover:text-brand-600 transition-colors mb-2">
                  {episode.title}
                </h3>
                <p class="text-gray-600">{episode.description}</p>
              </div>

              <div class="flex-shrink-0">
                <div class="w-12 h-12 border-2 border-gray-200 rounded-full flex items-center justify-center group-hover:bg-brand-600 group-hover:border-brand-600 transition-all">
                  <svg class="w-6 h-6 text-gray-400 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>

    <div class="mt-8 text-center md:hidden">
      <a
        href="https://podcasters.spotify.com/pod/show/przeprogramowani"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-brand-600 text-white rounded-full font-semibold"
      >
        Wszystkie podcasty
      </a>
    </div>

    <!-- Platform links -->
    <div class="mt-12 flex justify-center items-center gap-6">
      <p class="text-gray-600 mr-4">Na twojej ulubionej platformie</p>
      <a
        href="https://podcasts.apple.com/pl/podcast/przeprogramowani/id1508387250"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:text-brand-600 transition-colors"
        title="Apple Podcasts"
      >
