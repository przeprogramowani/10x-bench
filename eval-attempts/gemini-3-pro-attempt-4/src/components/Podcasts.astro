---
import { siteData } from '../data/content';

const { podcasts } = siteData;
---

<section id="podcast" class="py-24 bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Podcast</h2>
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        Ostatnie odcinki
      </p>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
        Rozmowy o technologii, AI i programowaniu.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {podcasts.map((episode) => (
        <a href={episode.link} target="_blank" rel="noopener noreferrer" class="group flex flex-col bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow overflow-hidden border border-gray-100">
          <div class="relative h-48 w-full overflow-hidden bg-gray-200">
            <img class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" src={episode.image} alt={episode.title} loading="lazy" />
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
            <div class="absolute bottom-4 right-4 bg-white/90 p-2 rounded-full shadow-md text-indigo-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div class="flex-1 p-6 flex flex-col justify-between">
            <div>
              <div class="text-sm font-medium text-indigo-600 mb-2">Podcast</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                {episode.title}
              </h3>
            </div>
            <div class="mt-4 flex items-center text-sm font-medium text-indigo-600">
              SÅ‚uchaj teraz
              <span aria-hidden="true" class="ml-1 transition-transform group-hover:translate-x-1">&rarr;</span>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="https://przeprogramowani.pl/podcast" class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
        Zobacz wszystkie odcinki
      </a>
    </div>
  </div>
</section>
