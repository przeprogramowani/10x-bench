<Layout title="Podcast">
  <section class="bg-gradient-to-br from-indigo-900 via-indigo-800 to-purple-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6">Podcasty</h1>
      <p class="text-xl text-indigo-100 max-w-3xl">
        Słuchaj naszych podcastów o technologii, AI i programowaniu
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {podcasts.map((podcast) => (
        <div class="mb-16 last:mb-0">
          <div class="flex items-baseline gap-4 mb-6">
            <h2 class="text-2xl md:text-3xl font-bold">{podcast.name}</h2>
            <span class="text-indigo-600 font-medium">{podcast.listeners}</span>
          </div>
          <p class="text-gray-600 mb-8">{podcast.description}</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {podcast.episodes.map((episode) => (
              <a href={episode.url} target="_blank" rel="noopener noreferrer" class="group block bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all">
                <div class="relative h-40 bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                  <img src={episode.image} alt={episode.title} class="absolute inset-0 w-full h-full object-cover" />
                  <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"></div>
                  <div class="relative z-10 w-12 h-12 bg-white/90 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-indigo-600 ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                  </div>
                  <span class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">{episode.duration}</span>
                </div>
                <div class="p-4">
                  <h3 class="font-semibold text-gray-900 line-clamp-2 group-hover:text-indigo-600 transition-colors">{episode.title}</h3>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-center mb-8">Jesteśmy na twojej ulubionej platformie</h2>
      
      <div class="flex flex-wrap justify-center gap-6">
        {platforms.map((platform) => (
          <a href={platform.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-6 py-3 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
            <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
              <path d={platform.icon} />
            </svg>
            <span class="font-medium text-gray-700">{platform.name}</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
