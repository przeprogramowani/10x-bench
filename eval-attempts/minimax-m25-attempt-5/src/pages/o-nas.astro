---
import Layout from '../layouts/Layout.astro';

const team = [
  {
    name: "Przemek Smyrdek",
    role: "Co-founder, Przeprogramowani",
    description: "Autor programów edukacyjnych, kursów i podcastów. Lead Engineer i Manager w DAZN i Cabify. Full-stack developer (.NET/C#, Java, Node.js, Angular, TypeScript). Prelegent na 4Developers, ReactiveConf i InfoShare. Kontrybutor Open Source (CursorLens, openapi-typescript).",
    linkedin: "https://linkedin.com/in/psmyrdek",
    image: null
  },
  {
    name: "Marcin Czarkowski",
    role: "Co-founder, Przeprogramowani",
    description: "Lead techniczny Platformy Frontendowej w SmartRecruiters z ponad 10-letnim doświadczeniem. Entuzjasta neurobiologii, tworzący materiały edukacyjne w oparciu o badania nad uczeniem się. Twórca \"Opanuj AI Podcast\" — najpopularniejszego technicznego podcastu o AI w Polsce.",
    linkedin: "https://linkedin.com/in/mczarkowski",
    image: null
  }
];
---

<Layout title="O nas">
  <section class="bg-gradient-to-br from-indigo-900 via-indigo-800 to-purple-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6">O nas</h1>
      <p class="text-xl text-indigo-100 max-w-3xl">
        Łączymy świat programowania, biznesu i rozwoju
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {team.map((member) => (
          <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow">
            <div class="w-24 h-24 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mb-6">
              <span class="text-3xl font-bold text-white">{member.name.charAt(0)}</span>
            </div>
            <h3 class="text-2xl font-bold mb-2">{member.name}</h3>
            <p class="text-indigo-600 font-medium mb-4">{member.role}</p>
            <p class="text-gray-600 leading-relaxed mb-6">{member.description}</p>
            <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-gray-600 hover:text-indigo-600 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              LinkedIn
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Nasze osiągnięcia</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="text-4xl font-extrabold text-indigo-600 mb-2">7+</div>
          <div class="text-gray-600">lat na rynku</div>
        </div>
        <div class="bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="text-4xl font-extrabold text-indigo-600 mb-2">400+</div>
          <div class="text-gray-600">absolwentów kursów</div>
        </div>
        <div class="bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="text-4xl font-extrabold text-indigo-600 mb-2">4000+</div>
          <div class="text-gray-600">słuchaczy podcastu</div>
        </div>
        <div class="bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="text-4xl font-extrabold text-indigo-600 mb-2">10+</div>
          <div class="text-gray-600">firm partnerskich</div>
        </div>
      </div>
    </div>
  </section>
</Layout>
