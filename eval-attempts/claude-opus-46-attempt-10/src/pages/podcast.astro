---
import Layout from "../layouts/Layout.astro";
import PodcastCard from "../components/PodcastCard";
import { podcastShows, podcastEpisodes } from "../data/podcast-episodes";
---

<Layout title="Podcast — Przeprogramowani" description="Podcasty Przeprogramowani — rozmowy o programowaniu, AI i karierze w IT.">
  <section class="px-4 pt-32 pb-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="mb-6 text-4xl font-extrabold text-white sm:text-5xl">Podcast</h1>
      <p class="mx-auto max-w-2xl text-lg leading-relaxed text-surface-300">
        Rozmowy z ekspertami ze świata IT o programowaniu, karierze i technologiach.
        Słuchaj na Spotify i Apple Podcasts.
      </p>
    </div>
  </section>

  <!-- Podcast shows -->
  <section class="px-4 py-8 sm:px-6 lg:px-8">
    <div class="mx-auto grid max-w-5xl gap-6 sm:grid-cols-2">
      {podcastShows.map((show) => (
        <div class="rounded-2xl border border-surface-700 bg-surface-900 p-6 sm:p-8">
          <div class="mb-2 flex items-center gap-3">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-brand-600">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-bold text-white">{show.name}</h2>
              <span class="text-sm text-brand-400">{show.episodeCount} odcinków</span>
            </div>
          </div>
          <p class="mb-6 text-sm leading-relaxed text-surface-400">{show.description}</p>
          <div class="flex flex-wrap gap-3">
            <a
              href={show.spotifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg bg-[#1DB954] px-4 py-2 text-sm font-semibold text-white transition-opacity hover:opacity-90"
            >
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              Spotify
            </a>
            <a
              href={show.appleUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg bg-[#9933CC] px-4 py-2 text-sm font-semibold text-white transition-opacity hover:opacity-90"
            >
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.4 1.038C11.61.34 10.46 0 9.24 0H8.76c-1.22 0-2.37.34-3.16 1.038C4.81 1.736 4.42 2.772 4.42 4.073v15.854c0 1.3.39 2.337 1.18 3.035.79.698 1.94 1.038 3.16 1.038h.48c1.22 0 2.37-.34 3.16-1.038.79-.698 1.18-1.735 1.18-3.035V4.073c0-1.3-.39-2.337-1.18-3.035zM18 10.5a1.5 1.5 0 110-3 1.5 1.5 0 010 3z"/>
              </svg>
              Apple Podcasts
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Ostatnie odcinki -->
  <section class="px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-5xl">
      <h2 class="mb-8 text-center text-2xl font-bold text-white">Ostatnie odcinki</h2>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {podcastEpisodes.map((episode) => (
          <PodcastCard episode={episode} />
        ))}
      </div>
    </div>
  </section>
</Layout>
