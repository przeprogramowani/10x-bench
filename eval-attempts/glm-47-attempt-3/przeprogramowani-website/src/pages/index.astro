---
import Layout from '../layouts/Layout.astro';
import CourseCard from '../components/CourseCard';
import YouTubeCard from '../components/YouTubeCard';
import { courses, partners } from '../data/courses';
import { videos } from '../data/videos';
---

<Layout title="Przeprogramowani - Szersze spojrzenie na programowanie">
  <section class="relative bg-gray-950">
    <div class="absolute inset-0 overflow-hidden">
      <video 
        class="absolute inset-0 w-full h-full object-cover blur-sm opacity-30 scale-110" 
        autoplay 
        loop 
        muted 
        playsinline 
        aria-hidden="true"
      >
        <source src="https://cdn.prod.website-files.com/67b70debac9aae72cbe06db7%2F67bc8b1478083f050d35336e_KV_animation%20_darker-transcode.webm" type="video/webm" />
        <source src="https://cdn.prod.website-files.com/67b70debac9aae72cbe06db7%2F67bc8b1478083f050d35336e_KV_animation%20_darker-transcode.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-r from-gray-950 via-gray-950/80 to-gray-950/30"></div>
      <div class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-gray-950 to-transparent"></div>
    </div>
    
    <div class="relative max-w-screen-xl mx-auto lg:grid lg:grid-cols-2 lg:gap-12 px-4 sm:px-8 py-16 sm:py-24 items-center">
      <div class="py-8">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-1 bg-orange-500 rounded-full"></div>
          <span class="text-orange-500 text-sm font-bold uppercase tracking-wider">
            Nowość - Maj 2026
          </span>
        </div>
        <h1 class="text-4xl sm:text-5xl font-extrabold text-white tracking-tight">
          10xDevs 3.0
        </h1>
        <p class="mt-5 text-lg text-gray-300 max-w-lg">
          Nowe oblicze programowania z wykorzystaniem Generatywnego AI. Techniki i narzędzia pozwalające świadomie
          stosować AI w całym cyklu wytwarzania oprogramowania.
        </p>
        <div class="mt-8 flex flex-wrap items-center gap-4">
          <a 
            href="https://10xdevs.pl?utm_source=przeprogramowani_website"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-colors duration-150 px-8 py-3 text-base bg-orange-500 text-white shadow-lg hover:bg-orange-400"
          >
            Szczegóły →
          </a>
        </div>
      </div>
      
      <div class="hidden lg:flex items-center justify-end overflow-visible" style="perspective: 1000px;">
        <div class="relative w-full max-w-xl" style="transform: rotateY(-8deg); transform-style: preserve-3d;">
          <video 
            class="relative z-10 rounded-xl shadow-2xl w-full" 
            autoplay 
            loop 
            muted 
            playsinline
          >
            <source src="https://cdn.prod.website-files.com/67b70debac9aae72cbe06db7%2F67bc8b1478083f050d35336e_KV_animation%20_darker-transcode.webm" type="video/webm" />
            <source src="https://cdn.prod.website-files.com/67b70debac9aae72cbe06db7%2F67bc8b1478083f050d35336e_KV_animation%20_darker-transcode.mp4" type="video/mp4" />
          </video>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 sm:py-20">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="mb-10 text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">
          Edukacja technologiczna w epoce AI
        </h2>
        <p class="mt-2 text-lg text-gray-400">
          Topowe programy edukacyjne dla ambitnych programistów
        </p>
      </div>
      
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
        {courses.map(course => (
          <CourseCard client:load key={course.id} {...course} />
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 sm:py-20 bg-gray-950">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="mb-10">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">
          Filmy i podcasty
        </h2>
        <p class="mt-2 text-lg text-gray-400">
          Rozwój nowoczesnego programisty
        </p>
      </div>
      
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {videos.map(video => (
          <YouTubeCard client:load key={video.id} {...video} />
        ))}
      </div>
      
      <div class="mt-10 text-center">
        <a 
          href="/youtube"
          class="inline-flex items-center gap-2 px-6 py-3 text-base font-semibold text-white rounded-lg transition-colors duration-200 bg-gray-800 hover:bg-gray-700"
        >
          Zobacz więcej filmów →
        </a>
      </div>
    </div>
  </section>

  <section class="relative py-16 sm:py-20">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-orange-500/5 to-transparent pointer-events-none"></div>
    <div class="max-w-screen-xl mx-auto px-4 relative z-10">
      <div class="mb-10 text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">
          7 lat na rynku edukacji technologicznej
        </h2>
        <p class="mt-2 text-lg text-gray-400">
          Współpracujemy z najlepszymi
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-8 max-w-[1100px] mx-auto">
        {partners.map(partner => (
          <div key={partner.name} class="w-[180px] h-[90px] relative rounded-lg overflow-hidden border border-gray-700 flex items-center justify-center p-4 bg-gray-900/50">
            <span class="text-gray-500 text-sm text-center font-medium">{partner.name}</span>
          </div>
        ))}
      </div>
      
      <p class="mt-12 text-center text-sm text-gray-500">
        Chcesz nawiązać współpracę?
        <a href="mailto:kontakt@przeprogramowani.pl" class="text-orange-500 hover:text-orange-400 transition-colors ml-1">
          kontakt@przeprogramowani.pl
        </a>
      </p>
    </div>
  </section>
</Layout>
