---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Kursy i szkolenia dla programistów - JavaScript, TypeScript, AI, GitHub Actions. Blog techniczny, podcast i newsletter dla ambitnych developerów.",
  image = "https://przeprogramowani.pl/img/page-cover.jpg"
} = Astro.props;

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title} — Przeprogramowani</title>
    <meta name="description" content={description} />
    <meta name="author" content="Przeprogramowani" />
    <meta name="robots" content="index, follow" />
    
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title + " — Przeprogramowani"} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Przeprogramowani" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title + " — Przeprogramowani"} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Przeprogramowani",
      "alternateName": "Przeprogramowani.pl",
      "url": "https://przeprogramowani.pl",
      "description": "Polska platforma edukacyjna dla programistów. Kursy, szkolenia, blog techniczny i podcast.",
      "foundingDate": "2017",
      "founders": [
        {
          "@type": "Person",
          "name": "Przemek Smyrdek"
        },
        {
          "@type": "Person",
          "name": "Marcin Czarkowski"
        }
      ],
      "sameAs": [
        "https://www.youtube.com/c/przeprogramowani",
        "https://www.facebook.com/przeprogramowani",
        "https://www.instagram.com/przeprogramowani",
        "https://przeprogramowani.substack.com",
        "https://open.spotify.com/show/3yVvOAXSYq6sQB02w4A4wo"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "kontakt@przeprogramowani.pl",
        "contactType": "customer service",
        "availableLanguage": "Polish"
      }
    })}></script>
  </head>
  <body class="min-h-screen bg-gray-950 text-gray-100 antialiased font-sans">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:rounded focus:bg-orange-500 focus:px-4 focus:py-2 focus:text-white">
      Przejdź do treści
    </a>
    
    <Header />
    
    <main id="main-content">
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

<style is:global>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
