---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CourseHero from '../../components/courses/CourseHero.astro';
import ModuleAccordion from '../../components/courses/ModuleAccordion.tsx';
import FeatureGrid from '../../components/courses/FeatureGrid.astro';
import SectionHeading from '../../components/common/SectionHeading.astro';
import Button from '../../components/common/Button.astro';
import { courses } from '../../data/courses.ts';

const course = courses.find((c) => c.slug === 'opanuj-frontend')!;
---

<BaseLayout title={course.title} description={course.description}>
  <CourseHero course={course} />

  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="Co zyskujesz?"
        subtitle="Kluczowe elementy kursu Opanuj Frontend"
      />
      <FeatureGrid features={course.features} color={course.color} />
    </div>
  </section>

  {course.modules && (
    <section class="py-20 bg-brand-surface">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <SectionHeading
          title="Program kursu"
          subtitle="Od podstaw HTML i CSS do React i TypeScript"
        />
        <div class="max-w-3xl mx-auto">
          <ModuleAccordion client:visible modules={course.modules} accentColor={course.color} />
        </div>
      </div>
    </section>
  )}

  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-brand-dark md:text-4xl">Zacznij swoją przygodę z frontendem</h2>
      <p class="mt-4 text-lg text-brand-muted max-w-2xl mx-auto">
        Kompleksowy kurs, który przygotuje Cię do pracy jako frontend developer.
      </p>
      <div class="mt-8">
        <Button href={course.url} variant="primary" size="lg" external>
          Zapisz się na kurs
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
