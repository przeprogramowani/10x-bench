---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/common/SectionHeading.astro';
import FounderCard from '../components/about/FounderCard.astro';
import Timeline from '../components/about/Timeline.astro';
import StatsSection from '../components/about/StatsSection.astro';
import { founders } from '../data/founders';
---

<BaseLayout title="O nas" description="Poznaj zespół Przeprogramowani — polską markę edukacji technologicznej od 2017 roku.">
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="O nas"
        subtitle="Szersze spojrzenie na programowanie od 2017 roku"
      />

      <div class="max-w-3xl mx-auto text-center mb-16">
        <p class="text-lg text-brand-muted leading-relaxed">
          Przeprogramowani to polska marka edukacji technologicznej założona w 2017 roku.
          Naszą misją jest dostarczanie praktycznej wiedzy, która pomaga programistom
          rozwijać się w dynamicznie zmieniającym się świecie technologii.
          Od podcastu, przez kursy online, po społeczność — tworzymy ekosystem
          wspierający rozwój na każdym etapie kariery.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-brand-surface">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <SectionHeading title="Założyciele" />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {founders.map((founder) => (
          <FounderCard founder={founder} />
        ))}
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="Nasza historia"
        subtitle="Od podcastu do wiodącej platformy edukacyjnej w polskim IT"
      />
      <Timeline />
    </div>
  </section>

  <section class="py-20 bg-brand-surface">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <SectionHeading title="W liczbach" />
      <StatsSection />
    </div>
  </section>
</BaseLayout>
