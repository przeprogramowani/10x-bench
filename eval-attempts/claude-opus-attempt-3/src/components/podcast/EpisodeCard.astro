---
import type { Episode } from '../../types';

interface Props {
  episode: Episode;
  podcastTitle: string;
  podcastColor: string;
}

const { episode, podcastTitle, podcastColor } = Astro.props;
---

<a
  href={episode.spotifyUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-xl border border-gray-200 bg-white p-6 hover:shadow-md hover:border-brand-primary/30 transition-all"
>
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <div class="w-2.5 h-2.5 rounded-full" style={`background-color: ${podcastColor}`}></div>
        <span class="text-xs font-medium text-brand-muted">{podcastTitle}</span>
      </div>
      <h3 class="font-bold text-brand-dark group-hover:text-brand-primary transition-colors">
        {episode.title}
      </h3>
      <p class="text-sm text-brand-muted mt-2 line-clamp-2">{episode.description}</p>
      <p class="text-xs text-brand-muted mt-3">
        {episode.date} &middot; {episode.duration}
      </p>
    </div>
    <svg class="w-10 h-10 text-brand-muted/40 group-hover:text-brand-primary shrink-0 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </div>
</a>
