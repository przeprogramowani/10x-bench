---
import type { TimelineEvent } from '../../types';

const events: TimelineEvent[] = [
  {
    year: '2017',
    title: 'Narodziny Przeprogramowani',
    description: 'Przemek i Marcin startują z podcastem o programowaniu. Pierwsze odcinki nagrywane w domowym studio.',
  },
  {
    year: '2019',
    title: 'Opanuj Frontend',
    description: 'Premiera pierwszego kursu online. Setki kursantów dołączają do społeczności.',
  },
  {
    year: '2020',
    title: 'Opanuj TypeScript',
    description: 'Nowy kurs dedykowany TypeScript. Społeczność rośnie ponad oczekiwania.',
  },
  {
    year: '2023',
    title: '10xDevs 1.0',
    description: 'Pierwszy kurs o programowaniu z AI. Rewolucja w podejściu do edukacji technologicznej.',
  },
  {
    year: '2025',
    title: '10xDevs 2.0 & Opanuj AI',
    description: 'Druga edycja flagowego kursu i nowy podcast o AI. Ponad 3000 absolwentów.',
  },
  {
    year: '2026',
    title: '10xDevs 3.0',
    description: 'Trzecia edycja z najnowszymi narzędziami AI. 3700+ absolwentów i rosnąca społeczność 15000+ osób.',
  },
];
---

<div class="relative">
  <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-brand-primary/20 -translate-x-1/2"></div>

  <div class="space-y-12">
    {events.map((event, index) => (
      <div class={`relative flex items-start gap-8 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
        <div class="hidden md:block md:w-1/2"></div>
        <div class="absolute left-4 md:left-1/2 w-4 h-4 bg-brand-primary rounded-full -translate-x-1/2 mt-1.5 ring-4 ring-white"></div>
        <div class="ml-12 md:ml-0 md:w-1/2 bg-white rounded-xl border border-gray-200 p-6">
          <span class="text-sm font-bold text-brand-primary">{event.year}</span>
          <h3 class="text-lg font-bold text-brand-dark mt-1">{event.title}</h3>
          <p class="text-sm text-brand-muted mt-2">{event.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>
