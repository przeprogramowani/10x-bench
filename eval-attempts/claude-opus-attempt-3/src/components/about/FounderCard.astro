---
import type { Founder } from '../../types';

interface Props {
  founder: Founder;
}

const { founder } = Astro.props;
---

<div class="rounded-2xl border border-gray-200 bg-white p-8">
  <div class="flex items-center gap-4 mb-6">
    <div class="w-16 h-16 rounded-full bg-brand-primary/10 flex items-center justify-center">
      <span class="text-2xl font-bold text-brand-primary">
        {founder.name.split(' ').map(n => n[0]).join('')}
      </span>
    </div>
    <div>
      <h3 class="text-xl font-bold text-brand-dark">{founder.name}</h3>
      <p class="text-sm text-brand-muted">{founder.role}</p>
    </div>
  </div>

  <p class="text-brand-muted leading-relaxed">{founder.bio}</p>

  <div class="mt-6 flex gap-4">
    {founder.socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm font-medium text-brand-primary hover:text-brand-primary/80 transition-colors"
      >
        {link.label}
      </a>
    ))}
  </div>
</div>
