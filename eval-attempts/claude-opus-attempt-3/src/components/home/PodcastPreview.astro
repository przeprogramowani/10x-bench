---
import SectionHeading from '../common/SectionHeading.astro';
import Button from '../common/Button.astro';
import { podcasts } from '../../data/podcasts';
---

<section class="py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      title="Podcasty"
      subtitle="Dwa podcasty o programowaniu i AI — posłuchaj najnowszych odcinków"
    />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {podcasts.map((podcast) => (
        <div class="rounded-2xl border border-gray-200 bg-white overflow-hidden">
          <div class="p-6" style={`border-top: 4px solid ${podcast.coverColor}`}>
            <h3 class="text-xl font-bold text-brand-dark">{podcast.title}</h3>
            <p class="mt-2 text-sm text-brand-muted">{podcast.description}</p>

            <div class="mt-6 space-y-4">
              {podcast.episodes.slice(0, 2).map((episode) => (
                <a
                  href={episode.spotifyUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-4 rounded-lg bg-gray-50 hover:bg-brand-surface transition-colors group"
                >
                  <div class="flex justify-between items-start gap-4">
                    <div>
                      <p class="font-semibold text-brand-dark group-hover:text-brand-primary transition-colors text-sm">
                        {episode.title}
                      </p>
                      <p class="text-xs text-brand-muted mt-1">{episode.date} &middot; {episode.duration}</p>
                    </div>
                    <svg class="w-5 h-5 text-brand-muted shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </a>
              ))}
            </div>

            <div class="mt-6 flex gap-3">
              <Button href={podcast.spotifyUrl} variant="primary" size="sm" external>
                Spotify
              </Button>
              <Button href={podcast.appleUrl} variant="outline" size="sm" external>
                Apple Podcasts
              </Button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-10">
      <Button href="/podcast" variant="outline">
        Wszystkie odcinki
      </Button>
    </div>
  </div>
</section>
