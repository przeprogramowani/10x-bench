---
import SectionHeading from '../common/SectionHeading.astro';
import Button from '../common/Button.astro';
import { videos } from '../../data/videos';

const latestVideos = videos.slice(0, 3);
---

<section class="py-20 bg-brand-surface">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <SectionHeading
      title="YouTube"
      subtitle="Najnowsze filmy z naszego kanału"
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {latestVideos.map((video) => (
        <a
          href={`https://youtube.com/watch?v=${video.id}`}
          target="_blank"
          rel="noopener noreferrer"
          class="group rounded-2xl overflow-hidden border border-gray-200 bg-white hover:shadow-lg transition-all hover:-translate-y-1"
        >
          <div class="aspect-video bg-gray-200 relative overflow-hidden">
            <div class="absolute inset-0 bg-brand-dark/10 group-hover:bg-brand-dark/20 transition-colors flex items-center justify-center">
              <svg class="w-14 h-14 text-white/80 group-hover:text-white group-hover:scale-110 transition-all" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z" />
              </svg>
            </div>
          </div>
          <div class="p-5">
            <h3 class="font-semibold text-brand-dark group-hover:text-brand-primary transition-colors">
              {video.title}
            </h3>
            <p class="text-sm text-brand-muted mt-2 line-clamp-2">{video.description}</p>
            <p class="text-xs text-brand-muted mt-3">{video.date}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-10">
      <Button href="/youtube" variant="outline">
        Więcej filmów
      </Button>
    </div>
  </div>
</section>
