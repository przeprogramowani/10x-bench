---
import type { Course } from '../../types';

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<a
  href={`/kursy/${course.slug}`}
  class="group block rounded-2xl border border-gray-200 bg-white p-6 transition-all hover:shadow-lg hover:border-brand-primary/30 hover:-translate-y-1"
>
  <div class="flex items-center gap-3 mb-4">
    <div class="w-3 h-3 rounded-full" style={`background-color: ${course.color}`}></div>
    <h3 class="text-xl font-bold text-brand-dark group-hover:text-brand-primary transition-colors">
      {course.title}
    </h3>
    {course.badge && (
      <span class="ml-auto text-xs font-semibold px-2 py-1 rounded-full bg-brand-accent/10 text-brand-accent">
        {course.badge}
      </span>
    )}
  </div>

  <p class="text-brand-muted text-sm leading-relaxed">{course.description}</p>

  {course.stats && (
    <div class="mt-6 flex gap-6 pt-4 border-t border-gray-100">
      {course.stats.map((stat) => (
        <div>
          <p class="text-lg font-bold text-brand-dark">{stat.value}</p>
          <p class="text-xs text-brand-muted">{stat.label}</p>
        </div>
      ))}
    </div>
  )}
</a>
