---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class={`mb-12 ${centered ? 'text-center' : ''}`}>
  <h2 class="text-3xl font-bold text-brand-dark md:text-4xl">{title}</h2>
  {subtitle && <p class="mt-4 text-lg text-brand-muted max-w-2xl mx-auto">{subtitle}</p>}
</div>
