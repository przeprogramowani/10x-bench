---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import Section from '../components/Section.tsx';
import VideoList from '../components/VideoList.tsx';
import { YOUTUBE_VIDEOS } from '../data';

const allVideos = [...YOUTUBE_VIDEOS, ...YOUTUBE_VIDEOS, ...YOUTUBE_VIDEOS].map((v, i) => ({
    ...v,
    id: `${v.id}-${i}`,
    title: `${v.title} ${i > 2 ? '(Archiwum)' : ''}`
}));
---

<Layout title="YouTube - Przeprogramowani.pl">
  <Header client:load />

  <main>
    <div class="bg-white dark:bg-slate-900 pt-24 pb-12 sm:pt-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
            Kanał YouTube
            </h2>
            <p class="mt-4 text-lg leading-8 text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
            Ponad 40,000 subskrybentów. Dołącz do nas na YouTube i oglądaj nasze poradniki, recenzje i dyskusje.
            </p>
             <div class="mt-8 flex justify-center">
                <a href="https://www.youtube.com/c/przeprogramowani" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 md:text-lg">
                    Subskrybuj
                </a>
            </div>
        </div>
    </div>

    <Section title="Najnowsze Filmy" bg="gray">
      <VideoList videos={allVideos} />
    </Section>
  </main>

  <Footer />
</Layout>
