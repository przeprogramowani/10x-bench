---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import Section from '../components/Section.tsx';
import CourseList from '../components/CourseList.tsx';
import { COURSES } from '../data';
---

<Layout title="Kursy - Przeprogramowani.pl">
  <Header client:load />

  <main>
    <div class="bg-white dark:bg-slate-900 py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
            <h2 class="text-base font-semibold leading-7 text-indigo-600 dark:text-indigo-400">Edukacja</h2>
            <p class="mt-2 text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
                Nasze Kursy
            </p>
            <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
                Praktyczna wiedza prosto z frontu. Tworzymy materiały, które pomagają programistom wchodzić na wyższy poziom.
            </p>
        </div>
    </div>

    <Section title="Dostępne Kursy" bg="gray">
      <CourseList courses={COURSES} />
    </Section>

    <Section title="Dlaczego nasze kursy?" bg="white">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
                <div class="mx-auto flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base leading-7 text-slate-600 dark:text-slate-400">Praktyczne Projekty</dt>
                    <dd class="order-first text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-5xl">100%</dd>
                </div>
                <div class="mx-auto flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base leading-7 text-slate-600 dark:text-slate-400">Zadowolonych Kursantów</dt>
                    <dd class="order-first text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-5xl">Thousands</dd>
                </div>
                <div class="mx-auto flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base leading-7 text-slate-600 dark:text-slate-400">Wsparcia Mentorskiego</dt>
                    <dd class="order-first text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-5xl">24/7</dd>
                </div>
            </dl>
        </div>
    </Section>
  </main>

  <Footer />
</Layout>
