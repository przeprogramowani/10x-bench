---
import Layout from '../layouts/Layout.astro';

const episodes = [
  {
    id: 1,
    title: "Czy AI wyśle programistów na bezrobocie? - Opanuj.AI #10",
    date: "2024-02-01",
    description: "Analiza wpływu sztucznej inteligencji na rynek pracy w IT. Czy powinniśmy się obawiać, czy raczej adaptować?",
    url: "https://przeprogramowani.pl/podcast/ai-bezrobocie",
    image: "https://via.placeholder.com/300x150?text=AI+Podcast"
  },
  {
    id: 2,
    title: "Rozwój kariery Seniora - Przeprogramowani #150",
    date: "2024-01-15",
    description: "Jak zaplanować ścieżkę kariery po osiągnięciu poziomu Senior Developer? Tech Lead, Architekt, czy może Management?",
    url: "https://przeprogramowani.pl/podcast/senior-kariera",
    image: "https://via.placeholder.com/300x150?text=Przeprogramowani"
  },
  {
    id: 3,
    title: "Modele multimodalne w praktyce - Opanuj.AI #9",
    date: "2024-01-01",
    description: "Przegląd najnowszych modeli multimodalnych od Google i OpenAI. Jakie dają możliwości w tworzeniu aplikacji?",
    url: "https://przeprogramowani.pl/podcast/multimodalne",
    image: "https://via.placeholder.com/300x150?text=AI+Podcast"
  },
  {
    id: 4,
    title: "Efektywna komunikacja w zespole zdalnym - Przeprogramowani #149",
    date: "2023-12-15",
    description: "Porady i triki na temat utrzymania wysokiej jakości komunikacji w rozproszonych zespołach deweloperskich.",
    url: "https://przeprogramowani.pl/podcast/komunikacja",
    image: "https://via.placeholder.com/300x150?text=Przeprogramowani"
  }
];
---

<Layout title="Podcast">
  <div class="bg-gray-50 py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Nasze Podcasty</h1>
        <p class="text-xl text-gray-600">Słuchaj o technologii, AI i rozwoju kariery gdziekolwiek jesteś.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {episodes.map(episode => (
          <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow flex flex-col md:flex-row h-full">
            <div class="md:w-48 bg-gray-200 flex-shrink-0">
               <img src={episode.image} alt={episode.title} class="w-full h-full object-cover" />
            </div>
            <div class="p-6 flex flex-col justify-between flex-1">
              <div>
                <div class="flex items-center text-sm text-gray-500 mb-2">
                  <span class="mr-2">{episode.date}</span>
                </div>
                <h2 class="text-xl font-bold text-gray-900 mb-2">
                  <a href={episode.url} class="hover:text-blue-600 transition-colors">
                    {episode.title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {episode.description}
                </p>
              </div>
              <div class="mt-auto">
                <a href={episode.url} class="text-blue-600 font-medium hover:text-blue-800 inline-flex items-center">
                  Słuchaj odcinka 
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <a href="https://podcasts.apple.com/pl/podcast/przeprogramowani/id1457088761" class="inline-block px-6 py-3 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors mx-2">
            Apple Podcasts
        </a>
        <a href="https://open.spotify.com/show/3Z3X" class="inline-block px-6 py-3 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition-colors mx-2">
            Spotify
        </a>
      </div>
    </div>
  </div>
</Layout>
