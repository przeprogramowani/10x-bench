---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import Section from '../components/Section.tsx';
import PodcastList from '../components/PodcastList.tsx';
import { PODCAST_EPISODES } from '../data';

// Create a longer list for the dedicated page
const allEpisodes = [...PODCAST_EPISODES, ...PODCAST_EPISODES, ...PODCAST_EPISODES].map((ep, i) => ({
  ...ep,
  id: `${ep.id}-${i}`, // Ensure unique keys
  title: `${ep.title} ${i > 2 ? '(Archiwum)' : ''}`
}));
---

<Layout title="Podcast - Przeprogramowani.pl">
  <Header client:load />

  <main>
    <div class="bg-white dark:bg-slate-900 pt-24 pb-12 sm:pt-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
          Podcast Przeprogramowani
        </h2>
        <p class="mt-4 text-lg leading-8 text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          Rozmowy dla głodnych wiedzy. Posłuchaj wywiadów z ekspertami, dyskusji o trendach i porad dotyczących rozwoju kariery w IT.
        </p>
        <div class="mt-8 flex justify-center space-x-4">
           <a href="https://anchor.fm/przeprogramowani" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
             Spotify
           </a>
           <a href="https://anchor.fm/przeprogramowani" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 text-sm font-medium rounded-md text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700">
             Apple Podcasts
           </a>
        </div>
      </div>
    </div>

    <Section title="Ostatnie Odcinki" bg="gray">
      <PodcastList episodes={allEpisodes} />
    </Section>
  </main>

  <Footer />
</Layout>
