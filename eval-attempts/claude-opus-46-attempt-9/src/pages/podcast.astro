---
import Layout from "../layouts/Layout.astro";
import { opanujAiEpisodes, przeprogramowaniEpisodes } from "../data/content";
---

<Layout
  title="Podcast — Przeprogramowani"
  description="Słuchaj podcastów Opanuj.AI i Przeprogramowani ft. Gość. Rozmowy o programowaniu, AI, karierze w IT i najnowszych technologiach."
  ogTitle="Podcast — Przeprogramowani"
  ogDescription="Podcasty o programowaniu, AI i karierze w IT. Opanuj.AI oraz Przeprogramowani ft. Gość."
>
  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-brand-500/5 via-transparent to-transparent pointer-events-none"></div>
    <div class="mx-auto max-w-7xl px-4 py-20 sm:px-6 sm:py-28 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl">Podcast</h1>
        <p class="mt-6 text-lg text-zinc-400 sm:text-xl">
          Dwa podcasty, jedna misja — pomagamy programistom rozwijać się i być na bieżąco z technologią.
        </p>
      </div>
    </div>
  </section>

  <!-- Opanuj.AI -->
  <section class="border-t border-white/5">
    <div class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
      <div class="mb-12">
        <div class="inline-flex items-center gap-2 rounded-full border border-brand-500/30 bg-brand-500/10 px-4 py-1.5 text-sm font-medium text-brand-400">
          Podcast
        </div>
        <h2 class="mt-4 text-2xl font-bold text-white sm:text-3xl">Opanuj.AI</h2>
        <p class="mt-3 max-w-2xl text-zinc-400">
          Podcast o sztucznej inteligencji w kontekście programowania. Praktyczne zastosowania AI, narzędzia i strategie dla developerów.
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {opanujAiEpisodes.map((episode) => (
          <a
            href={`https://open.spotify.com/episode/${episode.spotifyId}`}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col rounded-2xl border border-white/5 bg-white/[0.02] p-6 transition-all hover:-translate-y-1 hover:border-white/10 hover:bg-white/[0.04]"
          >
            <div class="flex items-center gap-3">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-green-500/10">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
                </svg>
              </div>
              <h3 class="text-base font-semibold text-white group-hover:text-brand-300 transition-colors line-clamp-2">{episode.title}</h3>
            </div>
            <p class="mt-4 flex-1 text-sm text-zinc-500 leading-relaxed">{episode.description}</p>
            <div class="mt-4 flex items-center gap-1 text-sm font-medium text-green-400 group-hover:text-green-300 transition-colors">
              Słuchaj na Spotify
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-0.5" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 8h10M9 4l4 4-4 4" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Przeprogramowani ft. Gość -->
  <section class="border-t border-white/5 bg-surface-900/50">
    <div class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
      <div class="mb-12">
        <div class="inline-flex items-center gap-2 rounded-full border border-brand-500/30 bg-brand-500/10 px-4 py-1.5 text-sm font-medium text-brand-400">
          Podcast
        </div>
        <h2 class="mt-4 text-2xl font-bold text-white sm:text-3xl">Przeprogramowani ft. Gość</h2>
        <p class="mt-3 max-w-2xl text-zinc-400">
          Wywiady z ciekawymi ludźmi z branży IT. Rozmowy o karierze, technologii i doświadczeniach z pierwszej ręki.
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {przeprogramowaniEpisodes.map((episode) => (
          <a
            href={`https://open.spotify.com/episode/${episode.spotifyId}`}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col rounded-2xl border border-white/5 bg-white/[0.02] p-6 transition-all hover:-translate-y-1 hover:border-white/10 hover:bg-white/[0.04]"
          >
            <div class="flex items-center gap-3">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-green-500/10">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z" />
                </svg>
              </div>
              <h3 class="text-base font-semibold text-white group-hover:text-brand-300 transition-colors line-clamp-2">{episode.title}</h3>
            </div>
            <p class="mt-4 flex-1 text-sm text-zinc-500 leading-relaxed">{episode.description}</p>
            <div class="mt-4 flex items-center gap-1 text-sm font-medium text-green-400 group-hover:text-green-300 transition-colors">
              Słuchaj na Spotify
              <svg class="h-4 w-4 transition-transform group-hover:translate-x-0.5" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 8h10M9 4l4 4-4 4" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
