---
import Layout from "../layouts/Layout.astro";
import VideoCard from "../components/VideoCard";

const videos = [
  {
    title: "Claude Code — Programowanie przyszłości jest już tu",
    videoId: "badKmTjGEHI",
    date: "2025",
  },
  {
    title: "10xDevs 3.0 — Zapowiedź nowej edycji kursu",
    videoId: "bRYvJgHl8Xg",
    date: "2025",
  },
  {
    title: "Astro — Najlepszy framework do stron internetowych?",
    videoId: "C5TjCFSldE0",
    date: "2024",
  },
  {
    title: "TypeScript — 10 rzeczy, które musisz wiedzieć",
    videoId: "zcSGBOj8giA",
    date: "2024",
  },
  {
    title: "React 19 — Co nowego? Przegląd zmian",
    videoId: "gXF7_YjGq3Y",
    date: "2024",
  },
  {
    title: "Jak zostać frontend developerem w 2024?",
    videoId: "piKpMFMr-xE",
    date: "2024",
  },
];
---

<Layout
  title="YouTube — Przeprogramowani"
  description="Filmy o programowaniu, architekturze i narzędziach AI na kanale Przeprogramowani."
>
  <section class="py-20">
    <div class="mx-auto max-w-6xl px-4">
      <div class="mb-12 text-center">
        <span
          class="mb-4 inline-block rounded-full border border-red-500/30 bg-red-500/10 px-4 py-1.5 text-sm font-medium text-red-300"
        >
          YouTube
        </span>
        <h1 class="mt-4 text-4xl font-extrabold text-white md:text-5xl">
          Nasze filmy
        </h1>
        <p class="mt-4 text-lg text-surface-300">
          Tutoriale, przeglądy technologii i rozmowy o karierze w IT
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
          videos.map((video) => (
            <VideoCard client:load {...video} />
          ))
        }
      </div>

      <!-- Subscribe CTA -->
      <div class="mt-16 text-center">
        <a
          href="https://www.youtube.com/@Przeprogramowani"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-xl bg-red-600 px-8 py-3.5 text-base font-bold text-white shadow-lg transition-all hover:bg-red-700"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
            ></path>
          </svg>
          Subskrybuj kanał
        </a>
      </div>
    </div>
  </section>
</Layout>
