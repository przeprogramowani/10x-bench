---
import Navigation from "../components/Navigation";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Przeprogramowani — szersze spojrzenie na programowanie. Kursy, podcast i społeczność dla ambitnych developerów.",
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pl_PL" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-surface-950 text-surface-100 antialiased">
    <Navigation client:load />

    <main>
      <slot />
    </main>

    <footer class="border-t border-surface-800 bg-surface-950">
      <div class="mx-auto max-w-6xl px-4 py-12">
        <div class="grid gap-8 md:grid-cols-3">
          <!-- Brand -->
          <div>
            <a href="/" class="text-xl font-bold text-white">
              <span class="text-brand-400">Prze</span>programowani
            </a>
            <p class="mt-3 text-sm leading-relaxed text-surface-400">
              Szersze spojrzenie na programowanie. Tworzymy kursy, podcast i
              treści edukacyjne od 2017 roku.
            </p>
          </div>

          <!-- Links -->
          <div>
            <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-surface-500">
              Nawigacja
            </h4>
            <ul class="space-y-2">
              <li>
                <a
                  href="/"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >Strona główna</a
                >
              </li>
              <li>
                <a
                  href="/o-nas"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >O nas</a
                >
              </li>
              <li>
                <a
                  href="/podcast"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >Podcast</a
                >
              </li>
              <li>
                <a
                  href="/youtube"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >YouTube</a
                >
              </li>
            </ul>
          </div>

          <!-- Social -->
          <div>
            <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-surface-500">
              Znajdź nas
            </h4>
            <ul class="space-y-2">
              <li>
                <a
                  href="https://www.youtube.com/@Przeprogramowani"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >YouTube</a
                >
              </li>
              <li>
                <a
                  href="https://open.spotify.com/show/4jLFLaiEMoey3qFOaniUr1"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >Spotify</a
                >
              </li>
              <li>
                <a
                  href="https://github.com/psmyrdek"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >GitHub</a
                >
              </li>
              <li>
                <a
                  href="https://przeprogramowani.substack.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >Substack</a
                >
              </li>
              <li>
                <a
                  href="https://www.linkedin.com/company/przeprogramowani"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >LinkedIn</a
                >
              </li>
              <li>
                <a
                  href="https://www.instagram.com/przeprogramowani/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-surface-400 transition-colors hover:text-white"
                  >Instagram</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-10 border-t border-surface-800 pt-6 text-center text-xs text-surface-500">
          &copy; {new Date().getFullYear()} Przeprogramowani. Wszelkie prawa
          zastrzeżone.
        </div>
      </div>
    </footer>
  </body>
</html>
