---
const podcastEpisodes = [
	{
		title: 'Claude Code + GLM-4.7 - Programowanie z darmowym AI wreszcie możliwe?',
		date: 'Ostatni odcinek',
		duration: '45 min',
		image: 'https://i3.ytimg.com/vi/KAJTsQbqBow/maxresdefault.jpg',
		url: 'https://www.youtube.com/watch?v=KAJTsQbqBow',
		description: 'Czy darmowe modele AI mogą konkurować z płatnymi rozwiązaniami? Testujemy najnowsze możliwości.'
	},
	{
		title: '5 TECHNIK, KTÓRE NAPRAWIŁY MÓJ WORKFLOW PROGRAMOWANIA Z AI',
		date: '2 tyg. temu',
		duration: '38 min',
		image: 'https://i3.ytimg.com/vi/uwi39C2O8NI/maxresdefault.jpg',
		url: 'https://www.youtube.com/watch?v=uwi39C2O8NI',
		description: 'Praktyczne techniki usprawniające codzienną pracę z asystentami AI w programowaniu.'
	},
	{
		title: 'Opanuj Agenta AI (Cursor, Codex, MCP) – praktyczne scenariusze dla programistów',
		date: '3 tyg. temu',
		duration: '52 min',
		image: 'https://i3.ytimg.com/vi/WJLGzf7qq-c/maxresdefault.jpg',
		url: 'https://www.youtube.com/watch?v=WJLGzf7qq-c',
		description: 'Jak efektywnie wykorzystywać agenty AI w codziennej pracy programisty.'
	}
];
---

<section id="podcast" class="py-24 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex flex-col lg:flex-row lg:items-end lg:justify-between mb-12">
			<div class="mb-8 lg:mb-0">
				<span class="inline-block text-pink-500 font-semibold text-sm uppercase tracking-wider mb-4">Opanuj AI Podcast</span>
				<h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
					Najpopularniejszy podcast<br />o AI dla programistów
				</h2>
				<p class="text-xl text-gray-600 max-w-2xl">
					Najświeższe informacje ze świata AI, praktyczne porady i rozmowy z ekspertami branżowymi.
				</p>
			</div>
			<a 
				href="https://przeprogramowani.pl/podcast"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 text-pink-500 font-semibold hover:text-pink-600 transition-colors"
			>
				Posłuchaj wszystkich odcinków
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
				</svg>
			</a>
		</div>
		
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			{podcastEpisodes.map((episode, index) => (
				<article class={`group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all ${index === 0 ? 'md:col-span-2 lg:col-span-1' : ''}`}>
					<a href={episode.url} target="_blank" rel="noopener noreferrer" class="block">
						<div class="relative aspect-video overflow-hidden">
							<img 
								src={episode.image} 
								alt={episode.title}
								class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
							/>
							<div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
								<div class="w-16 h-16 bg-pink-500 rounded-full flex items-center justify-center">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white ml-1" viewBox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
									</svg>
								</div>
							</div>
						</div>
						<div class="p-6">
							<div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
								<span class="inline-flex items-center gap-1">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
									</svg>
									{episode.duration}
								</span>
								<span>•</span>
								<span>{episode.date}</span>
							</div>
							<h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-pink-500 transition-colors">
								{episode.title}
							</h3>
							<p class="text-gray-600 text-sm line-clamp-2">{episode.description}</p>
						</div>
					</a>
				</article>
			))}
		</div>
		
		<div class="mt-12 text-center">
			<a 
				href="https://przeprogramowani.substack.com"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-3 bg-white border border-gray-200 rounded-full px-6 py-3 hover:shadow-md transition-shadow"
			>
				<div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
						<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
						<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
					</svg>
				</div>
				<div class="text-left">
					<p class="font-semibold text-gray-900">Przeprogramowany Newsletter</p>
					<p class="text-sm text-gray-500">Co tydzień 3-2-1: rekomendacje techniczne, rozwojowe i bonus</p>
				</div>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
				</svg>
			</a>
		</div>
	</div>
</section>
