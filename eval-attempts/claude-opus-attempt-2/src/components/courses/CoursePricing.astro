---
import Container from '@/components/shared/Container.astro';
import Button from '@/components/shared/Button.astro';
import type { Course } from '@/types';

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<section class="py-20 sm:py-28">
  <Container>
    <div class="mx-auto max-w-xl rounded-2xl border border-brand-primary/30 bg-gradient-to-b from-brand-primary/5 to-surface-raised p-8 text-center sm:p-12">
      <h2 class="text-2xl font-bold text-text-primary">Dołącz do kursu</h2>
      <p class="mt-2 text-text-secondary">{course.title} — {course.subtitle}</p>

      <div class="mt-6">
        <span class="text-4xl font-extrabold text-text-primary">{course.price}</span>
        {course.originalPrice && (
          <span class="ml-3 text-xl text-text-muted line-through">{course.originalPrice}</span>
        )}
      </div>

      <ul class="mt-8 space-y-3 text-left">
        {course.features.map((feature) => (
          <li class="flex items-start gap-3 text-sm text-text-secondary">
            <svg class="mt-0.5 h-5 w-5 shrink-0 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            {feature}
          </li>
        ))}
      </ul>

      <div class="mt-8">
        <Button href={course.ctaUrl} size="lg" external class="w-full">
          {course.ctaLabel}
        </Button>
      </div>
    </div>
  </Container>
</section>
