---
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import type { CourseModule } from '@/types';

interface Props {
  modules: CourseModule[];
}

const { modules } = Astro.props;
---

<section class="py-20 sm:py-28">
  <Container>
    <SectionHeading
      title="Program kursu"
      subtitle="Szczegółowy plan modułów i tematów, które opanujesz."
    />

    <div class="mx-auto max-w-4xl space-y-6">
      {modules.map((module, index) => (
        <div class="rounded-xl border border-surface-border bg-surface-raised p-6 sm:p-8">
          <div class="flex items-start gap-4">
            <span class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-brand-primary/10 text-sm font-bold text-brand-primary">
              {String(index + 1).padStart(2, '0')}
            </span>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-text-primary">{module.title}</h3>
              <p class="mt-1 text-sm text-text-secondary">{module.description}</p>
              <ul class="mt-4 space-y-2">
                {module.topics.map((topic) => (
                  <li class="flex items-start gap-2 text-sm text-text-secondary">
                    <svg class="mt-0.5 h-4 w-4 shrink-0 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {topic}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
