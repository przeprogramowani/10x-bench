---
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import type { Testimonial } from '@/types';

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

{testimonials.length > 0 && (
  <section class="py-20 sm:py-28 bg-surface-raised">
    <Container>
      <SectionHeading
        title="Opinie absolwentów"
        subtitle="Co mówią o kursie nasi absolwenci."
      />

      <div class="mx-auto grid max-w-5xl gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {testimonials.map((testimonial) => (
          <div class="rounded-xl border border-surface-border bg-surface-base p-6">
            <svg class="h-8 w-8 text-brand-primary/30" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10H0z" />
            </svg>
            <p class="mt-4 text-sm text-text-secondary leading-relaxed">{testimonial.content}</p>
            <div class="mt-4 border-t border-surface-border pt-4">
              <p class="text-sm font-semibold text-text-primary">{testimonial.name}</p>
              <p class="text-xs text-text-muted">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>
)}
