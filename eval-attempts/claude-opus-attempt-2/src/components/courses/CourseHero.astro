---
import Container from '@/components/shared/Container.astro';
import Button from '@/components/shared/Button.astro';
import Badge from '@/components/shared/Badge.astro';
import type { Course } from '@/types';

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<section class="relative overflow-hidden py-20 sm:py-28">
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-brand-primary/8 via-surface-base to-surface-base" />
  </div>

  <Container>
    <div class="mx-auto max-w-3xl text-center">
      {course.featured && <Badge variant="brand">Wyróżniony kurs</Badge>}
      {course.nextEdition && <Badge variant="success" class="ml-2">Następna edycja: {course.nextEdition}</Badge>}

      <h1 class="mt-6 text-4xl font-extrabold tracking-tight text-text-primary sm:text-5xl lg:text-6xl">
        {course.title}
      </h1>
      <p class="mt-2 text-xl text-brand-primary font-medium">{course.subtitle}</p>
      <p class="mt-6 text-lg text-text-secondary leading-relaxed">{course.description}</p>

      <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <Button href={course.ctaUrl} size="lg" external>
          {course.ctaLabel}
        </Button>
        <div class="text-center">
          <span class="text-3xl font-bold text-text-primary">{course.price}</span>
          {course.originalPrice && (
            <span class="ml-2 text-lg text-text-muted line-through">{course.originalPrice}</span>
          )}
        </div>
      </div>

      {course.studentsCount && (
        <p class="mt-6 text-sm text-text-muted">
          Dołącz do {course.studentsCount} absolwentów
        </p>
      )}
    </div>
  </Container>
</section>
