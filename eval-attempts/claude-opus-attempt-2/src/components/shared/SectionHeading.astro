---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class:list={['mb-12', centered && 'text-center']}>
  <h2 class="text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-4 text-lg text-text-secondary max-w-2xl" class:list={[centered && 'mx-auto']}>
      {subtitle}
    </p>
  )}
</div>
