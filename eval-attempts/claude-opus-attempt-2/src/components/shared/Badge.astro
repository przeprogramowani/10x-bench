---
interface Props {
  variant?: 'default' | 'brand' | 'success';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  default: 'bg-surface-overlay text-text-secondary border-surface-border',
  brand: 'bg-brand-primary/10 text-brand-primary border-brand-primary/20',
  success: 'bg-success/10 text-success border-success/20',
};
---

<span class:list={['inline-flex items-center px-3 py-1 text-xs font-medium rounded-full border', variantClasses[variant], className]}>
  <slot />
</span>
