---
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import Badge from '@/components/shared/Badge.astro';
import Button from '@/components/shared/Button.astro';
import { courses } from '@/data/courses';
---

<section class="py-20 sm:py-28">
  <Container>
    <SectionHeading
      title="Nasze kursy"
      subtitle="Wybierz kurs dopasowany do Twoich celów i poziomu zaawansowania."
    />

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {courses.map((course) => (
        <div
          class:list={[
            'group relative flex flex-col rounded-2xl border p-6 transition-all duration-300 hover:-translate-y-1',
            course.featured
              ? 'border-brand-primary/50 bg-gradient-to-b from-brand-primary/5 to-surface-raised shadow-lg shadow-brand-primary/10'
              : 'border-surface-border bg-surface-raised hover:border-brand-primary/30',
          ]}
        >
          {course.featured && (
            <Badge variant="brand" class="absolute -top-3 left-6">Wyróżniony</Badge>
          )}

          <h3 class="text-xl font-bold text-text-primary">{course.title}</h3>
          <p class="mt-1 text-sm text-brand-primary font-medium">{course.subtitle}</p>
          <p class="mt-4 flex-1 text-sm text-text-secondary leading-relaxed">
            {course.description.slice(0, 150)}...
          </p>

          {course.studentsCount && (
            <p class="mt-4 text-xs text-text-muted">{course.studentsCount} absolwentów</p>
          )}

          <div class="mt-6 flex items-end justify-between">
            <div>
              <span class="text-2xl font-bold text-text-primary">{course.price}</span>
              {course.originalPrice && (
                <span class="ml-2 text-sm text-text-muted line-through">{course.originalPrice}</span>
              )}
            </div>
            <Button href={`/kursy/${course.slug}`} variant={course.featured ? 'primary' : 'secondary'} size="sm">
              Szczegóły
            </Button>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
