---
import Container from '@/components/shared/Container.astro';
import Button from '@/components/shared/Button.astro';
import Badge from '@/components/shared/Badge.astro';
---

<section class="relative overflow-hidden py-20 sm:py-32">
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-brand-primary/10 via-surface-base to-surface-base" />
    <div class="absolute top-0 left-1/2 -translate-x-1/2 h-[500px] w-[800px] rounded-full bg-brand-primary/5 blur-3xl" />
  </div>

  <Container>
    <div class="mx-auto max-w-4xl text-center">
      <Badge variant="brand">Nowa edycja 10xDevs 3.0 — Marzec 2026</Badge>

      <h1 class="mt-8 text-4xl font-extrabold tracking-tight text-text-primary sm:text-6xl lg:text-7xl">
        Zostań <span class="bg-gradient-to-r from-brand-primary to-brand-secondary bg-clip-text text-transparent">10x Developerem</span> z&nbsp;AI
      </h1>

      <p class="mt-6 text-lg text-text-secondary sm:text-xl max-w-2xl mx-auto leading-relaxed">
        Przeprogramowani.pl to polska platforma edukacji technologicznej. Uczymy developerów
        jak efektywnie wykorzystywać AI w codziennej pracy — od prompt engineeringu po budowanie pełnych aplikacji.
      </p>

      <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <Button href="/kursy/10xdevs" size="lg">
          Dołącz do 10xDevs 3.0
        </Button>
        <Button href="/kursy" variant="secondary" size="lg">
          Zobacz wszystkie kursy
        </Button>
      </div>

      <!-- Social proof -->
      <div class="mt-16 flex flex-wrap items-center justify-center gap-8 sm:gap-12">
        <div class="text-center">
          <div class="text-3xl font-bold text-text-primary">3 700+</div>
          <div class="mt-1 text-sm text-text-muted">absolwentów</div>
        </div>
        <div class="h-8 w-px bg-surface-border hidden sm:block" />
        <div class="text-center">
          <div class="text-3xl font-bold text-text-primary">15 000+</div>
          <div class="mt-1 text-sm text-text-muted">społeczność</div>
        </div>
        <div class="h-8 w-px bg-surface-border hidden sm:block" />
        <div class="text-center">
          <div class="text-3xl font-bold text-text-primary">98</div>
          <div class="mt-1 text-sm text-text-muted">odcinków podcastu</div>
        </div>
        <div class="h-8 w-px bg-surface-border hidden sm:block" />
        <div class="text-center">
          <div class="text-3xl font-bold text-text-primary">od 2017</div>
          <div class="mt-1 text-sm text-text-muted">roku na rynku</div>
        </div>
      </div>
    </div>
  </Container>
</section>
