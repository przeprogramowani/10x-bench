---
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import { timeline } from '@/data/timeline';
---

<section class="py-20 sm:py-28 bg-surface-raised">
  <Container>
    <SectionHeading
      title="Nasza historia"
      subtitle="Od bloga o programowaniu do wiodÄ…cej platformy edukacji tech w Polsce."
    />

    <div class="mx-auto max-w-3xl">
      <div class="relative border-l-2 border-surface-border pl-8">
        {timeline.map((event, index) => (
          <div class:list={['relative pb-10', index === timeline.length - 1 && 'pb-0']}>
            <!-- Dot -->
            <div class="absolute -left-[calc(0.5rem+1px)] top-0 flex h-4 w-4 items-center justify-center rounded-full border-2 border-brand-primary bg-surface-base">
              <div class="h-2 w-2 rounded-full bg-brand-primary" />
            </div>

            <span class="text-sm font-bold text-brand-primary">{event.year}</span>
            <h3 class="mt-1 text-lg font-semibold text-text-primary">{event.title}</h3>
            <p class="mt-2 text-sm text-text-secondary">{event.description}</p>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>
