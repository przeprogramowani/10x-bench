---
import Container from '@/components/shared/Container.astro';
import { footerNavigation } from '@/data/navigation';
---

<footer class="border-t border-surface-border/50 bg-surface-raised">
  <Container class="py-12 sm:py-16">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="text-lg font-bold text-text-primary">
          <span class="text-brand-primary">&lt;</span>Przeprogramowani<span class="text-brand-primary">/&gt;</span>
        </a>
        <p class="mt-4 text-sm text-text-secondary leading-relaxed">
          Polska platforma edukacji technologicznej. Pomagamy developerom rozwijać umiejętności od 2017 roku.
        </p>
      </div>

      <!-- Kursy -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted">Kursy</h3>
        <ul class="mt-4 space-y-3">
          {footerNavigation.courses.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-text-secondary transition-colors hover:text-text-primary">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Zasoby -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted">Zasoby</h3>
        <ul class="mt-4 space-y-3">
          {footerNavigation.resources.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-text-secondary transition-colors hover:text-text-primary">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted">Social</h3>
        <ul class="mt-4 space-y-3">
          {footerNavigation.social.map((item) => (
            <li>
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-text-secondary transition-colors hover:text-text-primary"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 border-t border-surface-border/50 pt-8">
      <p class="text-center text-sm text-text-muted">
        &copy; {new Date().getFullYear()} Przeprogramowani. Wszelkie prawa zastrzeżone.
      </p>
    </div>
  </Container>
</footer>
