---
import Container from '@/components/shared/Container.astro';
import NavLink from './NavLink.astro';
import { MobileNav } from './MobileNav';
import { mainNavigation } from '@/data/navigation';
---

<header class="sticky top-0 z-50 border-b border-surface-border/50 bg-surface-base/80 backdrop-blur-xl">
  <Container>
    <nav class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-lg font-bold text-text-primary">
        <span class="text-brand-primary">&lt;</span>Przeprogramowani<span class="text-brand-primary">/&gt;</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-8 md:flex">
        {mainNavigation.map((item) => (
          <NavLink href={item.href}>{item.label}</NavLink>
        ))}
      </div>

      <!-- Desktop CTA -->
      <div class="hidden md:block">
        <a
          href="/kursy/10xdevs"
          class="rounded-lg bg-brand-primary px-4 py-2 text-sm font-semibold text-white transition-colors hover:bg-brand-primary-hover"
        >
          Dołącz do 10xDevs
        </a>
      </div>

      <!-- Mobile Navigation -->
      <div class="md:hidden">
        <MobileNav client:load navigation={mainNavigation} />
      </div>
    </nav>
  </Container>
</header>
