---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import EpisodeCard from '@/components/podcast/EpisodeCard.astro';
import PlatformLinks from '@/components/podcast/PlatformLinks.astro';
import { podcastEpisodes } from '@/data/podcast-episodes';
---

<BaseLayout
  seo={{
    title: 'Podcast',
    description:
      'Podcast Przeprogramowani — 98 odcinków o programowaniu, technologii i karierze w IT. Słuchaj na Spotify i Apple Podcasts.',
  }}
>
  <section class="py-20 sm:py-28">
    <Container>
      <SectionHeading
        title="Podcast Przeprogramowani"
        subtitle="98 odcinków o programowaniu, technologii i karierze w IT. Co dwa tygodnie nowy odcinek."
      />

      <PlatformLinks />

      <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {podcastEpisodes.map((episode) => (
          <EpisodeCard episode={episode} />
        ))}
      </div>
    </Container>
  </section>
</BaseLayout>
