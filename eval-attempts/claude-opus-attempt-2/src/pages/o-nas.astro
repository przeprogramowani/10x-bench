---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/shared/Container.astro';
import SectionHeading from '@/components/shared/SectionHeading.astro';
import MissionSection from '@/components/about/MissionSection.astro';
import TeamMember from '@/components/about/TeamMember.astro';
import Timeline from '@/components/about/Timeline.astro';
import { team } from '@/data/team';
---

<BaseLayout
  seo={{
    title: 'O nas',
    description:
      'Poznaj zespół Przeprogramowani — Przemka Smyrdka i Marcina Czarkowskiego. Nasza misja, historia i wartości.',
  }}
>
  <MissionSection />

  <!-- Team -->
  <section class="py-20 sm:py-28 bg-surface-raised">
    <Container>
      <SectionHeading
        title="Nasz zespół"
        subtitle="Stoimy za Przeprogramowani od 2017 roku."
      />
      <div class="mx-auto grid max-w-4xl gap-8 sm:grid-cols-2">
        {team.map((member) => (
          <TeamMember member={member} />
        ))}
      </div>
    </Container>
  </section>

  <Timeline />
</BaseLayout>
