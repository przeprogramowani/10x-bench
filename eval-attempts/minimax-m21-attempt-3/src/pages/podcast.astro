---
import Layout from '../layouts/Layout.astro';

const episodes = [
  {
    title: "Opanuj Agenta AI (Cursor, Codex, MCP) – praktyczne scenariusze dla programistów",
    date: "Luty 2026",
    duration: "45 min",
    guest: "Gość specjalny",
    description: "W tym odcinku omawiamy praktyczne zastosowania agentów AI w codziennej pracy programisty.",
    category: "AI & Development"
  },
  {
    title: "Programowanie z AI bez tajemnic – odpowiedzi na pytania, które zadaje każdy developer",
    date: "Luty 2026",
    duration: "38 min",
    guest: "Q&A",
    description: "Odpowiadamy na najczęściej zadawane pytania o programowanie z wykorzystaniem AI.",
    category: "Q&A"
  },
  {
    title: "Special webinar for Builders: Tu zaczyna się Twój AI-ready project",
    date: "Styczeń 2026",
    duration: "52 min",
    guest: "Webinar",
    description: "Webinar dla wszystkich, którzy chcą rozpocząć projekt z wykorzystaniem AI.",
    category: "Webinar"
  },
  {
    title: "Jak efektywnie uczyć się programowania w 2026?",
    date: "Styczeń 2026",
    duration: "42 min",
    guest: "Adam Sz",
    description: "Dyskusja o skutecznych metodach nauki programowania w erze AI.",
    category: "Rozwój"
  },
  {
    title: "TypeScript 5.x – co nowego i jak to wykorzystać?",
    date: "Grudzień 2025",
    duration: "48 min",
    guest: " Michał M",
    description: "Deep dive w nowości TypeScript 5.x i praktyczne zastosowania.",
    category: "TypeScript"
  },
  {
    title: "Od juniora do seniora – ścieżka rozwoju z AI",
    date: "Grudzień 2025",
    duration: "55 min",
    guest: "Panel dyskusyjny",
    description: "Rozmowa o ścieżce kariery programisty i roli AI w rozwoju.",
    category: "Kariera"
  }
];
---

<Layout title="Podcast" description="Posłuchaj podcastu Przeprogramowani - rozmowy o programowaniu, AI i rozwoju kariery.">
  <section class="py-20 bg-[#ff6b35] text-white">
    <div class="container-custom">
      <div class="flex items-center space-x-4 mb-4">
        <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1a9 9 0 0 0-9 9v7a9 9 0 0 0 9 9 9 9 0 0 0 9-9v-7a9 9 0 0 0-9-9zm0 16a7 7 0 0 1-7-7v-2a5 5 0 0 1 10 0v2a7 7 0 0 1-3 2z"/>
          <path d="M9 15a1 1 0 0 1-1-1v-4a1 1 0 0 1 2 0v4a1 1 0 0 1-1 1zm6 0a1 1 0 0 1-1-1v-4a1 1 0 0 1 2 0v4a1 1 0 0 1-1 1z"/>
        </svg>
        <h1 class="text-4xl md:text-5xl font-bold">Podcast</h1>
      </div>
      <p class="text-xl text-white/90 max-w-3xl">
        Szersze spojrzenie na programowanie. Rozmowy o technologiach, karierze i rozwoju w erze AI.
      </p>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-center mb-12">Ostatnie odcinki</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {episodes.map((episode) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="text-xs font-semibold text-[#ff6b35] bg-[#ff6b35]/10 px-3 py-1 rounded-full">
                  {episode.category}
                </span>
                <span class="text-sm text-gray-500">{episode.duration}</span>
              </div>
              <h3 class="font-bold text-lg mb-2 line-clamp-2 hover:text-[#ff6b35] transition-colors cursor-pointer">
                {episode.title}
              </h3>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">{episode.description}</p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">{episode.date}</span>
                <span class="text-[#38b2ac] text-sm font-medium">{episode.guest}</span>
              </div>
            </div>
            <div class="bg-gray-100 px-6 py-3 flex items-center justify-between">
              <button class="flex items-center text-gray-700 hover:text-[#ff6b35] transition-colors">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                Słuchaj
              </button>
              <button class="text-gray-500 hover:text-gray-700 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold mb-4">Słuchaj nas gdzie chcesz</h2>
      <div class="flex flex-wrap justify-center gap-4 mt-8">
        <a href="https://open.spotify.com/show/example" target="_blank" rel="noopener noreferrer" class="flex items-center bg-[#1DB954] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#1ed760] transition-colors">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
          Spotify
        </a>
        <a href="https://podcasts.apple.com/pl/podcast/example" target="_blank" rel="noopener noreferrer" class="flex items-center bg-[#9933ff] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#a64dff] transition-colors">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
          </svg>
          Apple Podcasts
        </a>
        <a href="https://przeprogramowani.podbean.com" target="_blank" rel="noopener noreferrer" class="flex items-center bg-[#f8650b] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#ff7a2f] transition-colors">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19.6 4.4c-.7-.4-1.5-.4-2.2 0-2.4 1.3-3.2 3-3.6 4.5-.8-.5-1.7-.8-2.6-.8-2.4 0-4.4 2-4.4 4.4s2 4.4 4.4 4.4c.9 0 1.8-.3 2.6-.8.4 1.6 1.2 3.2 3.6 4.5.7.4 1.5.4 2.2 0 2.9-1.7 3.9-4.2 3.9-6.9s-1-5.2-3.9-6.9zM13.8 13c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1zm4.8 0c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1z"/>
          </svg>
          Podbean
        </a>
      </div>
    </div>
  </section>
</Layout>