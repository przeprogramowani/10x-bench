---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? `${title} - Przeprogramowani` : 'Przeprogramowani - Szersze spojrzenie na programowanie'}</title>
    <meta name="description" content="Przeprogramowani - Szersze spojrzenie na programowanie. Edukacja technologiczna w epoce AI." />
    <meta name="author" content="Przeprogramowani" />
    <meta property="og:title" content={title ? `${title} - Przeprogramowani` : 'Przeprogramowani - Szersze spojrzenie na programowanie'} />
    <meta property="og:description" content="Przeprogramowani - Szersze spojrzenie na programowanie. Edukacja technologiczna w epoce AI." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://przeprogramowani.pl" />
    <meta property="og:image" content="/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title ? `${title} - Przeprogramowani` : 'Przeprogramowani - Szersze spojrzenie na programowanie'} />
    <meta name="twitter:description" content="Przeprogramowani - Szersze spojrzenie na programowanie. Edukacja technologiczna w epoce AI." />
    <meta name="twitter:image" content="/og-image.jpg" />
    <meta name="twitter:site" content="@przeprogramowani" />
  </head>
  <body class="bg-gray-50">
    <Header />
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>