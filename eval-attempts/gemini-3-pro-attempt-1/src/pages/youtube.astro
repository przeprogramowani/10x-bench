---
import Layout from '../layouts/Layout.astro';
import VideoList from '../components/VideoList';
---

<Layout title="YouTube - Przeprogramowani.pl">
    <section class="py-32 bg-slate-900 text-center relative overflow-hidden">
         <div class="absolute inset-0 bg-gradient-to-b from-slate-800 to-slate-900 opacity-50"></div>
        <div class="container mx-auto px-4 relative z-10">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">
                Kanał <span class="text-red-500">YouTube</span>
            </h1>
            <p class="text-xl text-slate-400 max-w-2xl mx-auto mb-10">
                Tutoriale, live coding, analizy i dyskusje. Dołącz do społeczności 40,000+ programistów.
            </p>
            <a href="https://www.youtube.com/c/przeprogramowani?sub_confirmation=1" target="_blank" rel="noopener noreferrer" class="inline-block px-8 py-4 bg-red-600 hover:bg-red-700 text-white rounded-full font-bold text-lg transition-transform hover:scale-105 shadow-xl shadow-red-600/30">
                Subskrybuj kanał
            </a>
        </div>
    </section>

    <section class="py-16 bg-slate-950 min-h-screen">
        <div class="container mx-auto px-4">
            <VideoList client:visible />
        </div>
    </section>
</Layout>
