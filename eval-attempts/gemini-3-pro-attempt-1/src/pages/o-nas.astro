---
import Layout from '../layouts/Layout.astro';
import { Linkedin } from 'lucide-react';

const founders = [
    {
        name: "Przemek Smyrdek",
        role: "Co-founder",
        description: "Autor programów szkoleniowych, kursów i podcastów promujących szersze spojrzenie na programowanie. Lead Engineer i Manager w międzynarodowych firmach produktowych takich jak DAZN i Cabify. Rozwijał full-stackowe aplikacje webowe m.in. w stacku .NET/C#, Java, Node.js, Angular i TypeScript.",
        linkedin: "https://www.linkedin.com/in/psmyrdek/"
    },
    {
        name: "Marcin Czarkowski",
        role: "Co-founder",
        description: "Lead techniczny Platformy Frontendowej w SmartRecruiters. Pasjonat neuronauki, tworzy materiały edukacyjne z uwzględnieniem badań dot. efektywnego przyswajania wiedzy. Przez ponad 10 lat kariery programistycznej realizował projekty komercyjne oparte o TypeScript, React, Node.js oraz PHP.",
        linkedin: "https://www.linkedin.com/in/mkczarkowski/"
    }
];

const values = [
    { title: "Holistic developer growth", desc: "Umiejętności techniczne to nie wszystko. Liczy się też kreatywne myślenie i komunikacja." },
    { title: "Well-rounded specialists", desc: "Tworzymy nie tylko świetnych programistów, ale świadomych specjalistów." },
    { title: "Market-relevant competencies", desc: "Skupiamy się na umiejętnościach faktycznie poszukiwanych na rynku." },
    { title: "Quality & practical focus", desc: "Kursy oparte o praktyczne projekty, code review i mentoring." }
];
---

<Layout title="O nas - Przeprogramowani.pl">
    <section class="pt-32 pb-16 bg-slate-900 relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('/background.svg')] opacity-5 bg-cover bg-center"></div>
        <div class="container mx-auto px-4 text-center relative z-10">
            <h1 class="text-4xl md:text-6xl font-bold mb-8 bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-500">
                O nas
            </h1>
            <p class="text-xl md:text-2xl text-slate-300 max-w-4xl mx-auto leading-relaxed font-light italic">
                "Współczesny świat nowych technologii to coś więcej niż kodowanie. Na styku biznesu i programowania najlepiej sprawdzają się osoby, które potrafią myśleć kreatywnie, rozwiązywać problemy, pracować w zespole i komunikować się z innymi."
            </p>
        </div>
    </section>

    {/* Founders */}
    <section class="py-24 bg-slate-950">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-white mb-16 text-center">Założyciele</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
                {founders.map(founder => (
                    <div class="bg-slate-900 rounded-2xl p-8 border border-slate-800 hover:border-cyan-500/30 transition-colors group text-center md:text-left flex flex-col items-center md:items-start shadow-xl">
                        <div class="w-32 h-32 bg-slate-800 rounded-full mb-6 overflow-hidden border-2 border-slate-700 group-hover:border-cyan-500 transition-colors">
                            <div class="w-full h-full bg-gradient-to-br from-cyan-900 to-blue-900 flex items-center justify-center text-4xl font-bold text-white">
                                {founder.name.charAt(0)}
                            </div>
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-1">{founder.name}</h3>
                        <p class="text-cyan-400 font-medium mb-4">{founder.role}</p>
                        <p class="text-slate-400 mb-6 leading-relaxed text-sm">
                            {founder.description}
                        </p>
                        <a href={founder.linkedin} target="_blank" rel="noopener noreferrer" class="mt-auto inline-flex items-center text-slate-400 hover:text-white transition-colors px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700">
                            <Linkedin size={20} className="mr-2" />
                            LinkedIn
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    {/* Values */}
    <section class="py-24 bg-slate-900 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-slate-800/50 to-slate-900"></div>
        <div class="container mx-auto px-4 relative z-10">
            <h2 class="text-3xl font-bold text-white mb-16 text-center">Nasze Wartości</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {values.map((value, idx) => (
                    <div class="bg-slate-800/50 p-8 rounded-2xl border border-slate-700 backdrop-blur-sm hover:transform hover:-translate-y-2 transition-all duration-300 hover:shadow-cyan-500/10 hover:shadow-xl hover:border-cyan-500/30">
                        <div class="text-5xl font-bold text-slate-700/50 mb-4 font-mono">0{idx + 1}</div>
                        <h3 class="text-white font-bold text-lg mb-3">{value.title}</h3>
                        <p class="text-slate-400 text-sm leading-relaxed">{value.desc}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>
